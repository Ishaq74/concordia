---
import BaseLayout from "./BaseLayout.astro";
import Sidebar from "@components/templates/docs/Sidebar.astro";
import MainDoc from "@components/templates/docs/MainDoc.astro";

export interface Props {
  title: string;
  description?: string;
  variant?: 'initial' | 'retro' | 'modern' | 'futuristic';
}

const { title, description, variant = 'initial' } = Astro.props;

// Récupérer les headings de la page pour le sommaire
let headings: Array<{depth: number, slug: string, text: string}> = [];
try {
  const html = await Astro.slots.render('default');
  const regex = /<h([2-3])[^>]*id="([^"]+)"[^>]*>([^<]+)<\/h\1>/g;
  const matches = Array.from(html.matchAll(regex));
  headings = matches.map(match => ({
    depth: parseInt(match[1]),
    slug: match[2],
    text: match[3]
  }));
} catch (e) {
  // Pas de headings disponibles
}
---

<BaseLayout title={title} description={description}>
  <div class={`doc-layout ${variant}`}>
    <Sidebar currentPath={Astro.url.pathname} variant={variant} />
    
    <MainDoc variant={variant}>
      <slot />
    </MainDoc>

    <!-- Table of contents -->
    {headings.length > 0 && (
      <aside class="doc-toc">
        <div class="doc-toc-content">
          <h2 class="doc-toc-title">Sur cette page</h2>
          <nav class="doc-toc-nav">
            <ul class="doc-toc-list">
              {headings.map(heading => (
                <li class={`doc-toc-item depth-${heading.depth}`}>
                  <a href={`#${heading.slug}`} class="doc-toc-link">
                    {heading.text}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        </div>
      </aside>
    )}
  </div>
</BaseLayout>

<style>
  .doc-layout {
    display: grid;
    grid-template-columns: 250px 1fr 200px;
    gap: 3rem;
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  @media (max-width: 1200px) {
    .doc-layout {
      grid-template-columns: 220px 1fr;
    }

    .doc-toc {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .doc-layout {
      grid-template-columns: 1fr;
    }

    .doc-layout :global(.doc-sidebar) {
      display: none;
    }
  }

  .doc-toc {
    position: sticky;
    top: 2rem;
    height: fit-content;
    max-height: calc(100vh - 4rem);
    overflow-y: auto;
  }

  .doc-toc-content {
    border-left: 1px solid var(--border-default);
    padding-left: 1rem;
  }

  .doc-toc-title {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
    margin-bottom: 0.75rem;
  }

  .doc-toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .doc-toc-item {
    margin-bottom: 0.5rem;
  }

  .doc-toc-item.depth-3 {
    padding-left: 1rem;
  }

  .doc-toc-link {
    display: block;
    font-size: 0.813rem;
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.2s;
    line-height: 1.4;
  }

  .doc-toc-link:hover {
    color: var(--color-primary);
  }

  .doc-toc::-webkit-scrollbar {
    width: 6px;
  }

  .doc-toc::-webkit-scrollbar-thumb {
    background: var(--border-default);
    border-radius: 3px;
  }
</style>

