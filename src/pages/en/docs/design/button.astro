    code={`<ButtonComponent variant="initial" color="primary" disabled>
  Disabled button
</Button>`}
  />

  <h2 id="examples">Usage Examples</h2>

  <h3>Login Form</h3>
  <div class="example-section">
    <form style="max-width: 400px;">
      <div style="margin-bottom: 1rem;">
        <label for="email-example" style="display: block; margin-bottom: 0.5rem;">Email</label>
        <input id="email-example" type="email" placeholder="you@example.com" style="width: 100%;" />
      </div>
