    code={`<Select id="country" variant="initial">
  <option value="">Select a country</option>
  <option value="fr">France</option>
  <option value="be">Belgium</option>
</Select>`}
  />

  <h2 id="checkbox">Checkbox</h2>
  
  <p>
    Checkboxes with variant support, error states, and accessibility.
  </p>

  <div class="example-section">
    <Checkbox id="checkbox-initial" name="terms" variant="initial">
      I accept the terms (initial)
    </Checkbox>

    <Checkbox id="checkbox-retro" name="newsletter" variant="retro" checked>
      Receive the newsletter (retro)
    </Checkbox>

    <Checkbox id="checkbox-modern" name="notifications" variant="modern">
      Enable notifications (modern)
    </Checkbox>

    <Checkbox id="checkbox-futuristic" name="beta" variant="futuristic">
      Join the beta program (futuristic)
    </Checkbox>

    <Checkbox 
      id="checkbox-error" 
