---
import { getCollection } from "astro:content";
import BaseLayout from "@layouts/BaseLayout.astro";
import Grid from "@components/Tools/Grid.astro";

// 1. On réutilise tes composants "briques"
import PostGrid from "@components/modules/blog/lists/PostGrid.astro";
import PostCard from "@components/modules/blog/cards/PostCard.astro";
import AuthorBannerPage from "@templates/BannerPage/AuthorBannerPage.astro";


export const prerender = true;

export async function getStaticPaths() {
  const LANG = "es";
  const allPosts = await getCollection("blog");
  const esPosts = allPosts.filter((p) => p.data.lang === LANG);

  const authors = new Map();
  esPosts.forEach((post) => {
    post.data.authors.forEach((author) => {
      if (!authors.has(author.slug)) {
        authors.set(author.slug, author);
      }
    });
  });

  return Array.from(authors.values()).map((author) => ({
    params: { slug: author.slug },
    props: { author },
  }));
}

const { author } = Astro.props;
const { slug } = Astro.params;
const LANG = "es";

const allPosts = await getCollection("blog");

const posts = allPosts
  .filter((p) => p.data.lang === LANG)
  .filter((p) => p.data.authors.some((a) => a.slug === slug))
  .sort(
    (a, b) =>
      new Date(b.data.publishedAt || 0).getTime() -
      new Date(a.data.publishedAt || 0).getTime(),
  );

// Helper pour les initiales
function getInitials(name: string) {
  if (!name) return "?";
  return name
    .split(" ")
    .map((w) => w[0])
    .join("")
    .toUpperCase()
    .slice(0, 2);
}
---

<BaseLayout
  title={`Artículos de ${author.name}`}
  description={`Descubre los artículos escritos por ${author.name}`}
  lang={LANG}
>
 <AuthorBannerPage
      name={author.name}
      bio={author.bio}
      avatar={author.avatar}
      role="Autor"
      variant="retro"
      color="secondary" />

    {/* LISTE DES ARTICLES (Réutilisation Grid + Card) */}
    <Grid tag="section" columns={1} gap="lg" margin="none" justifyContent="start">
      <h2>
        {posts.length} Artículo{posts.length > 1 ? "s" : ""} publicado{
          posts.length > 1 ? "s" : ""
        }
      </h2>

      {
        posts.length > 0 ? (
          <PostGrid>
            {posts.map((post) => (
              <PostCard post={post} lang={LANG} />
            ))}
          </PostGrid>
        ) : (
          <p class="text-muted-foreground italic">
            Este autor no tiene más artículos en línea.
          </p>
        )
      }
    </Grid>
</BaseLayout>
