---
export const prerender = false;

import BaseLayout from "@layouts/BaseLayout.astro";
import { getDrizzle } from "@database/drizzle";
import { article, category } from "@database/schemas";
import { eq, and, sql, desc } from "drizzle-orm";
import translations from "@i18n/fr.json";
import { getRelativeLocaleUrl } from "@lib/i18n/locale-url";

const t = translations;
const locale = "fr";
const db = await getDrizzle();

const url = new URL(Astro.request.url);
const search = url.searchParams.get("q") ?? "";
const categorySlug = url.searchParams.get("category") ?? "";
const page = Math.max(1, parseInt(url.searchParams.get("page") ?? "1", 10));
const limit = 12;
const offset = (page - 1) * limit;

const conditions: ReturnType<typeof eq>[] = [eq(article.status, "published")];
if (search) {
  conditions.push(
    sql`EXISTS (
      SELECT 1 FROM article_content ac
      WHERE ac.article_id = ${article.id}
        AND ac.language = ${locale}
        AND (ac.title ILIKE ${"%" + search + "%"} OR ac.summary ILIKE ${"%" + search + "%"})
    )`,
  );
}
if (categorySlug) {
  conditions.push(
    sql`EXISTS (
      SELECT 1 FROM article_category_link acl
      JOIN category c ON c.id = acl.category_id
      WHERE acl.article_id = ${article.id} AND c.slug = ${categorySlug}
    )`,
  );
}

const where = and(...conditions);

const [articles, countResult] = await Promise.all([
  db
    .select({
      id: article.id,
      slug: article.slug,
      coverImageUrl: article.coverImageUrl,
      publishedAt: article.publishedAt,
      title: sql<string>`(SELECT ac.title FROM article_content ac WHERE ac.article_id = ${article.id} AND ac.language = ${locale} LIMIT 1)`,
      summary: sql<string>`(SELECT ac.summary FROM article_content ac WHERE ac.article_id = ${article.id} AND ac.language = ${locale} LIMIT 1)`,
    })
    .from(article)
    .where(where)
    .orderBy(desc(article.publishedAt))
    .limit(limit)
    .offset(offset),
  db
    .select({ count: sql<number>`count(*)::int` })
    .from(article)
    .where(where),
]);

const total = countResult[0].count;
const totalPages = Math.ceil(total / limit);

const categories = await db
  .select({
    slug: category.slug,
    name: sql<string>`(SELECT ct.name FROM category_translation ct WHERE ct.category_id = ${category.id} AND ct.lang = ${locale} LIMIT 1)`,
  })
  .from(category)
  .where(and(eq(category.type, "magazine"), eq(category.isActive, true)));
---

<BaseLayout title={t.magazine.title} description={t.magazine.description}>
  <main class="articles-page">
    <header class="page-header">
      <h1>{t.magazine.title}</h1>
      <p>{t.magazine.description}</p>
    </header>

    <section class="filters" aria-label="Filtres">
      <form method="get" action="" class="search-form" role="search">
        <input
          type="search"
          name="q"
          value={search}
          placeholder="Rechercher un article..."
          aria-label="Rechercher un article"
          class="search-input"
        />
        <select name="category" aria-label={t.magazine.categories} class="filter-select">
          <option value="">{t.magazine.categories}</option>
          {categories.map((cat) => (
            <option value={cat.slug} selected={cat.slug === categorySlug}>{cat.name}</option>
          ))}
        </select>
        <button type="submit" class="search-button">{t.common.search}</button>
      </form>
    </section>

    <section class="articles-grid" aria-label={t.magazine.title}>
      {articles.length === 0 ? (
        <p class="no-results">{t.magazine.noArticles}</p>
      ) : (
        <ul class="article-list" role="list">
          {articles.map((a) => (
            <li class="article-card">
              <a href={getRelativeLocaleUrl(locale, `/articles/${a.slug}`)} class="article-link">
                {a.coverImageUrl && (
                  <img src={a.coverImageUrl} alt="" class="article-cover" loading="lazy" />
                )}
                <div class="article-card-body">
                  <h2 class="article-title">{a.title ?? a.slug}</h2>
                  {a.summary && <p class="article-summary">{a.summary}</p>}
                  {a.publishedAt && (
                    <time class="article-date" datetime={a.publishedAt.toISOString()}>
                      {t.magazine.publishedOn} {a.publishedAt.toLocaleDateString(locale)}
                    </time>
                  )}
                </div>
              </a>
            </li>
          ))}
        </ul>
      )}
    </section>

    {totalPages > 1 && (
      <nav class="pagination" aria-label="Pagination">
        {page > 1 && (
          <a href={`?q=${search}&category=${categorySlug}&page=${page - 1}`} class="pagination-link" rel="prev">
            {t.common.previous}
          </a>
        )}
        <span class="pagination-info">Page {page} / {totalPages}</span>
        {page < totalPages && (
          <a href={`?q=${search}&category=${categorySlug}&page=${page + 1}`} class="pagination-link" rel="next">
            {t.common.next}
          </a>
        )}
      </nav>
    )}
  </main>
</BaseLayout>

<style>
  .articles-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-6, 1.5rem) var(--space-4, 1rem);
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--space-6, 1.5rem);
  }

  .page-header h1 {
    font-size: var(--text-3xl, 1.875rem);
    font-weight: 800;
    margin: 0 0 var(--space-2, 0.5rem);
  }

  .page-header p {
    color: var(--text-secondary, #64748b);
    font-size: var(--text-lg, 1.125rem);
    margin: 0;
  }

  .filters {
    margin-bottom: var(--space-6, 1.5rem);
  }

  .search-form {
    display: flex;
    gap: var(--space-2, 0.5rem);
    flex-wrap: wrap;
  }

  .search-input {
    flex: 1;
    min-width: 200px;
    padding: var(--space-2, 0.5rem) var(--space-3, 0.75rem);
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: var(--radius-md, 0.375rem);
    font-size: var(--text-sm, 0.875rem);
  }

  .filter-select {
    padding: var(--space-2, 0.5rem) var(--space-3, 0.75rem);
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: var(--radius-md, 0.375rem);
    font-size: var(--text-sm, 0.875rem);
    background: var(--bg-default, #fff);
  }

  .search-button {
    padding: var(--space-2, 0.5rem) var(--space-4, 1rem);
    background: var(--color-primary, #3b82f6);
    color: #fff;
    border: none;
    border-radius: var(--radius-md, 0.375rem);
    cursor: pointer;
    font-weight: 600;
  }

  .article-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-4, 1rem);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .article-card {
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: var(--radius-lg, 0.5rem);
    overflow: hidden;
    transition: box-shadow 0.2s;
  }

  .article-card:hover {
    box-shadow: var(--shadow-md, 0 4px 6px -1px rgba(0, 0, 0, 0.1));
  }

  .article-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .article-cover {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .article-card-body {
    padding: var(--space-4, 1rem);
  }

  .article-title {
    font-size: var(--text-lg, 1.125rem);
    font-weight: 700;
    margin: 0 0 var(--space-2, 0.5rem);
  }

  .article-summary {
    font-size: var(--text-sm, 0.875rem);
    color: var(--text-secondary, #64748b);
    margin: 0 0 var(--space-2, 0.5rem);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .article-date {
    font-size: var(--text-xs, 0.75rem);
    color: var(--text-muted, #94a3b8);
  }

  .no-results {
    text-align: center;
    color: var(--text-secondary, #64748b);
    padding: var(--space-8, 2rem) 0;
    font-size: var(--text-lg, 1.125rem);
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-4, 1rem);
    margin-top: var(--space-8, 2rem);
    padding: var(--space-4, 1rem) 0;
  }

  .pagination-link {
    padding: var(--space-2, 0.5rem) var(--space-4, 1rem);
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: var(--radius-md, 0.375rem);
    text-decoration: none;
    color: var(--color-primary, #3b82f6);
    font-weight: 500;
  }

  .pagination-info {
    color: var(--text-secondary, #64748b);
    font-size: var(--text-sm, 0.875rem);
  }
</style>
