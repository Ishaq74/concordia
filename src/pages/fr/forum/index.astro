---
export const prerender = false;

import BaseLayout from "@layouts/BaseLayout.astro";
import { getDrizzle } from "@database/drizzle";
import { forumThread, category } from "@database/schemas";
import { eq, and, sql, desc } from "drizzle-orm";
import translations from "@i18n/fr.json";
import { getRelativeLocaleUrl } from "@lib/i18n/locale-url";

const t = translations;
const locale = "fr";
const db = await getDrizzle();

const url = new URL(Astro.request.url);
const search = url.searchParams.get("q") ?? "";
const categorySlug = url.searchParams.get("category") ?? "";
const page = Math.max(1, parseInt(url.searchParams.get("page") ?? "1", 10));
const limit = 20;
const offset = (page - 1) * limit;

const conditions: ReturnType<typeof eq>[] = [eq(forumThread.status, "published")];
if (search) {
  conditions.push(sql`${forumThread.title} ILIKE ${"%" + search + "%"}`);
}
if (categorySlug) {
  conditions.push(
    sql`${forumThread.categoryId} IN (SELECT id FROM category WHERE slug = ${categorySlug})`,
  );
}

const where = and(...conditions);

const [threads, countResult] = await Promise.all([
  db
    .select({
      id: forumThread.id,
      slug: forumThread.slug,
      title: forumThread.title,
      isPinned: forumThread.isPinned,
      isLocked: forumThread.isLocked,
      postCount: forumThread.postCount,
      lastPostAt: forumThread.lastPostAt,
      createdAt: forumThread.createdAt,
      categoryName: sql<string>`(SELECT ct.name FROM category_translation ct WHERE ct.category_id = ${forumThread.categoryId} AND ct.lang = ${locale} LIMIT 1)`,
    })
    .from(forumThread)
    .where(where)
    .orderBy(desc(forumThread.isPinned), desc(forumThread.lastPostAt))
    .limit(limit)
    .offset(offset),
  db
    .select({ count: sql<number>`count(*)::int` })
    .from(forumThread)
    .where(where),
]);

const total = countResult[0].count;
const totalPages = Math.ceil(total / limit);

const categories = await db
  .select({
    slug: category.slug,
    name: sql<string>`(SELECT ct.name FROM category_translation ct WHERE ct.category_id = ${category.id} AND ct.lang = ${locale} LIMIT 1)`,
  })
  .from(category)
  .where(and(eq(category.type, "forum"), eq(category.isActive, true)));

const user = Astro.locals.user;
---

<BaseLayout title={t.forumPage.title} description={t.forumPage.description}>
  <main class="forum-page">
    <header class="page-header">
      <h1>{t.forumPage.title}</h1>
      <p>{t.forumPage.description}</p>
      {user && (
        <a href={getRelativeLocaleUrl(locale, "/forum/nouveau")} class="new-thread-button">
          {t.forumPage.newThread}
        </a>
      )}
    </header>

    <section class="filters" aria-label="Filtres">
      <form method="get" action="" class="search-form" role="search">
        <input
          type="search"
          name="q"
          value={search}
          placeholder="Rechercher un sujet..."
          aria-label="Rechercher un sujet"
          class="search-input"
        />
        <select name="category" aria-label="CatÃ©gorie" class="filter-select">
          <option value="">CatÃ©gorie</option>
          {categories.map((cat) => (
            <option value={cat.slug} selected={cat.slug === categorySlug}>{cat.name}</option>
          ))}
        </select>
        <button type="submit" class="search-button">{t.common.search}</button>
      </form>
    </section>

    <section class="threads-section" aria-label={t.forumPage.threads}>
      {threads.length === 0 ? (
        <p class="no-results">{t.forumPage.noThreads}</p>
      ) : (
        <ul class="thread-list" role="list">
          {threads.map((thread) => (
            <li class:list={["thread-item", { pinned: thread.isPinned, locked: thread.isLocked }]}>
              <a href={getRelativeLocaleUrl(locale, `/forum/${thread.slug}`)} class="thread-link">
                <div class="thread-main">
                  <div class="thread-badges">
                    {thread.isPinned && <span class="badge-pin" aria-label={t.forumPage.pinned}>ðŸ“Œ</span>}
                    {thread.isLocked && <span class="badge-lock" aria-label={t.forumPage.locked}>ðŸ”’</span>}
                  </div>
                  <h2 class="thread-title">{thread.title}</h2>
                  {thread.categoryName && <span class="thread-category">{thread.categoryName}</span>}
                </div>
                <div class="thread-stats">
                  <span class="thread-posts">{thread.postCount} {t.forumPage.replies}</span>
                  {thread.lastPostAt && (
                    <time class="thread-activity" datetime={thread.lastPostAt.toISOString()}>
                      {t.forumPage.lastActivity}: {thread.lastPostAt.toLocaleDateString(locale)}
                    </time>
                  )}
                </div>
              </a>
            </li>
          ))}
        </ul>
      )}
    </section>

    {totalPages > 1 && (
      <nav class="pagination" aria-label="Pagination">
        {page > 1 && (
          <a href={`?q=${search}&category=${categorySlug}&page=${page - 1}`} class="pagination-link" rel="prev">
            {t.common.previous}
          </a>
        )}
        <span class="pagination-info">Page {page} / {totalPages}</span>
        {page < totalPages && (
          <a href={`?q=${search}&category=${categorySlug}&page=${page + 1}`} class="pagination-link" rel="next">
            {t.common.next}
          </a>
        )}
      </nav>
    )}
  </main>
</BaseLayout>

<style>
  .forum-page { max-width: 1000px; margin: 0 auto; padding: var(--space-6, 1.5rem) var(--space-4, 1rem); }
  .page-header { text-align: center; margin-bottom: var(--space-6, 1.5rem); }
  .page-header h1 { font-size: var(--text-3xl, 1.875rem); font-weight: 800; margin: 0 0 var(--space-2, 0.5rem); }
  .page-header p { color: var(--text-secondary, #64748b); font-size: var(--text-lg, 1.125rem); margin: 0 0 var(--space-4, 1rem); }
  .new-thread-button { display: inline-block; padding: var(--space-2, 0.5rem) var(--space-4, 1rem); background: var(--color-primary, #3b82f6); color: #fff; border-radius: var(--radius-md, 0.375rem); text-decoration: none; font-weight: 600; }

  .filters { margin-bottom: var(--space-6, 1.5rem); }
  .search-form { display: flex; gap: var(--space-2, 0.5rem); flex-wrap: wrap; }
  .search-input { flex: 1; min-width: 200px; padding: var(--space-2, 0.5rem) var(--space-3, 0.75rem); border: 1px solid var(--border-color, #e2e8f0); border-radius: var(--radius-md, 0.375rem); font-size: var(--text-sm, 0.875rem); }
  .filter-select { padding: var(--space-2, 0.5rem) var(--space-3, 0.75rem); border: 1px solid var(--border-color, #e2e8f0); border-radius: var(--radius-md, 0.375rem); font-size: var(--text-sm, 0.875rem); background: var(--bg-default, #fff); }
  .search-button { padding: var(--space-2, 0.5rem) var(--space-4, 1rem); background: var(--color-primary, #3b82f6); color: #fff; border: none; border-radius: var(--radius-md, 0.375rem); cursor: pointer; font-weight: 600; }

  .thread-list { list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 0; }

  .thread-item {
    border: 1px solid var(--border-color, #e2e8f0);
    border-bottom: none;
    transition: background-color 0.15s;
  }

  .thread-item:first-child { border-radius: var(--radius-lg, 0.5rem) var(--radius-lg, 0.5rem) 0 0; }
  .thread-item:last-child { border-bottom: 1px solid var(--border-color, #e2e8f0); border-radius: 0 0 var(--radius-lg, 0.5rem) var(--radius-lg, 0.5rem); }
  .thread-item:only-child { border-radius: var(--radius-lg, 0.5rem); border-bottom: 1px solid var(--border-color, #e2e8f0); }
  .thread-item:hover { background: var(--bg-hover, #f8f9fa); }
  .thread-item.pinned { background: var(--bg-active, #eff6ff); }

  .thread-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-3, 0.75rem) var(--space-4, 1rem);
    gap: var(--space-4, 1rem);
  }

  .thread-main { flex: 1; }
  .thread-badges { display: inline-flex; gap: var(--space-1, 0.25rem); margin-right: var(--space-1, 0.25rem); }
  .thread-title { font-size: var(--text-base, 1rem); font-weight: 600; margin: 0 0 var(--space-1, 0.25rem); display: inline; }
  .thread-category { font-size: var(--text-xs, 0.75rem); color: var(--text-muted, #94a3b8); background: var(--bg-secondary, #f1f5f9); padding: 1px var(--space-2, 0.5rem); border-radius: var(--radius-sm, 0.25rem); }

  .thread-stats { text-align: right; min-width: 140px; }
  .thread-posts { font-size: var(--text-sm, 0.875rem); font-weight: 600; display: block; }
  .thread-activity { font-size: var(--text-xs, 0.75rem); color: var(--text-muted, #94a3b8); }

  .no-results { text-align: center; color: var(--text-secondary, #64748b); padding: var(--space-8, 2rem) 0; font-size: var(--text-lg, 1.125rem); }
  .pagination { display: flex; justify-content: center; align-items: center; gap: var(--space-4, 1rem); margin-top: var(--space-8, 2rem); }
  .pagination-link { padding: var(--space-2, 0.5rem) var(--space-4, 1rem); border: 1px solid var(--border-color, #e2e8f0); border-radius: var(--radius-md, 0.375rem); text-decoration: none; color: var(--color-primary, #3b82f6); font-weight: 500; }
  .pagination-info { color: var(--text-secondary, #64748b); font-size: var(--text-sm, 0.875rem); }
</style>
