---
export const prerender = false;

import BaseLayout from "@layouts/BaseLayout.astro";
import { getDrizzle } from "@database/drizzle";
import { group } from "@database/schemas";
import { eq, and, sql, desc } from "drizzle-orm";
import translations from "@i18n/fr.json";
import { getRelativeLocaleUrl } from "@lib/i18n/locale-url";

const t = translations;
const locale = "fr";
const db = await getDrizzle();

const url = new URL(Astro.request.url);
const search = url.searchParams.get("q") ?? "";
const page = Math.max(1, parseInt(url.searchParams.get("page") ?? "1", 10));
const limit = 12;
const offset = (page - 1) * limit;

const conditions: ReturnType<typeof eq>[] = [eq(group.isPublic, true)];
if (search) {
  conditions.push(
    sql`(${group.name} ILIKE ${"%" + search + "%"} OR ${group.description} ILIKE ${"%" + search + "%"})`,
  );
}

const where = and(...conditions);

const [groups, countResult] = await Promise.all([
  db
    .select({
      id: group.id,
      slug: group.slug,
      name: group.name,
      description: group.description,
      memberCount: sql<number>`(SELECT count(*)::int FROM group_member gm WHERE gm.group_id = ${group.id})`,
      createdAt: group.createdAt,
    })
    .from(group)
    .where(where)
    .orderBy(desc(group.createdAt))
    .limit(limit)
    .offset(offset),
  db
    .select({ count: sql<number>`count(*)::int` })
    .from(group)
    .where(where),
]);

const total = countResult[0].count;
const totalPages = Math.ceil(total / limit);
---

<BaseLayout title="Groupes" description="Groupes et communautés du territoire">
  <main class="groups-page">
    <header class="page-header">
      <h1>Groupes</h1>
      <p>Rejoignez des groupes et échangez avec la communauté</p>
    </header>

    <section class="filters" aria-label="Filtres">
      <form method="get" action="" class="search-form" role="search">
        <input
          type="search"
          name="q"
          value={search}
          placeholder="Rechercher un groupe..."
          aria-label="Rechercher un groupe"
          class="search-input"
        />
        <button type="submit" class="search-button">{t.common.search}</button>
      </form>
    </section>

    <section class="groups-grid" aria-label="Groupes">
      {groups.length === 0 ? (
        <p class="no-results">Aucun groupe trouvé</p>
      ) : (
        <ul class="group-list" role="list">
          {groups.map((g) => (
            <li class="group-card">
              <a href={getRelativeLocaleUrl(locale, `/groupes/${g.slug}`)} class="group-link">
                <div class="group-card-body">
                  <h2 class="group-name">{g.name}</h2>
                  {g.description && <p class="group-description">{g.description}</p>}
                  <div class="group-meta">
                    <span class="group-members">{g.memberCount} membres</span>
                  </div>
                </div>
              </a>
            </li>
          ))}
        </ul>
      )}
    </section>

    {totalPages > 1 && (
      <nav class="pagination" aria-label="Pagination">
        {page > 1 && (
          <a href={`?q=${search}&page=${page - 1}`} class="pagination-link" rel="prev">{t.common.previous}</a>
        )}
        <span class="pagination-info">Page {page} / {totalPages}</span>
        {page < totalPages && (
          <a href={`?q=${search}&page=${page + 1}`} class="pagination-link" rel="next">{t.common.next}</a>
        )}
      </nav>
    )}
  </main>
</BaseLayout>

<style>
  .groups-page { max-width: 1200px; margin: 0 auto; padding: var(--space-6, 1.5rem) var(--space-4, 1rem); }
  .page-header { text-align: center; margin-bottom: var(--space-6, 1.5rem); }
  .page-header h1 { font-size: var(--text-3xl, 1.875rem); font-weight: 800; margin: 0 0 var(--space-2, 0.5rem); }
  .page-header p { color: var(--text-secondary, #64748b); font-size: var(--text-lg, 1.125rem); margin: 0; }
  .filters { margin-bottom: var(--space-6, 1.5rem); }
  .search-form { display: flex; gap: var(--space-2, 0.5rem); flex-wrap: wrap; }
  .search-input { flex: 1; min-width: 200px; padding: var(--space-2, 0.5rem) var(--space-3, 0.75rem); border: 1px solid var(--border-color, #e2e8f0); border-radius: var(--radius-md, 0.375rem); font-size: var(--text-sm, 0.875rem); }
  .search-button { padding: var(--space-2, 0.5rem) var(--space-4, 1rem); background: var(--color-primary, #3b82f6); color: #fff; border: none; border-radius: var(--radius-md, 0.375rem); cursor: pointer; font-weight: 600; }

  .group-list { display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: var(--space-4, 1rem); list-style: none; padding: 0; margin: 0; }
  .group-card { border: 1px solid var(--border-color, #e2e8f0); border-radius: var(--radius-lg, 0.5rem); transition: box-shadow 0.2s; }
  .group-card:hover { box-shadow: var(--shadow-md, 0 4px 6px -1px rgba(0, 0, 0, 0.1)); }
  .group-link { text-decoration: none; color: inherit; display: block; }
  .group-card-body { padding: var(--space-4, 1rem); }
  .group-name { font-size: var(--text-lg, 1.125rem); font-weight: 700; margin: 0 0 var(--space-2, 0.5rem); }
  .group-description { font-size: var(--text-sm, 0.875rem); color: var(--text-secondary, #64748b); margin: 0 0 var(--space-3, 0.75rem); display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
  .group-meta { font-size: var(--text-xs, 0.75rem); color: var(--text-muted, #94a3b8); }
  .no-results { text-align: center; color: var(--text-secondary, #64748b); padding: var(--space-8, 2rem) 0; font-size: var(--text-lg, 1.125rem); }
  .pagination { display: flex; justify-content: center; align-items: center; gap: var(--space-4, 1rem); margin-top: var(--space-8, 2rem); }
  .pagination-link { padding: var(--space-2, 0.5rem) var(--space-4, 1rem); border: 1px solid var(--border-color, #e2e8f0); border-radius: var(--radius-md, 0.375rem); text-decoration: none; color: var(--color-primary, #3b82f6); font-weight: 500; }
  .pagination-info { color: var(--text-secondary, #64748b); font-size: var(--text-sm, 0.875rem); }
</style>
