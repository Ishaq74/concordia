---
export const prerender = false;

import BaseLayout from "@layouts/BaseLayout.astro";
import { getDrizzle } from "@database/drizzle";
import { volunteerProject } from "@database/schemas";
import { eq, and, sql, desc, inArray } from "drizzle-orm";
import translations from "@i18n/fr.json";
import { getRelativeLocaleUrl } from "@lib/i18n/locale-url";

const t = translations;
const locale = "fr";
const db = await getDrizzle();

const url = new URL(Astro.request.url);
const search = url.searchParams.get("q") ?? "";
const statusFilter = url.searchParams.get("status") ?? "";
const page = Math.max(1, parseInt(url.searchParams.get("page") ?? "1", 10));
const limit = 12;
const offset = (page - 1) * limit;

const publicStatuses = ["recruiting", "in_progress", "completed"] as const;
type VolunteerStatus = "draft" | "cancelled" | "completed" | "in_progress" | "recruiting";
const statusValues: VolunteerStatus[] = statusFilter
  ? [statusFilter as VolunteerStatus]
  : [...publicStatuses];
const conditions: ReturnType<typeof eq>[] = [inArray(volunteerProject.status, statusValues)];

if (search) {
  conditions.push(
    sql`(${volunteerProject.title} ILIKE ${"%" + search + "%"} OR ${volunteerProject.description} ILIKE ${"%" + search + "%"})`,
  );
}

const where = and(...conditions);

const [projects, countResult] = await Promise.all([
  db
    .select({
      id: volunteerProject.id,
      slug: volunteerProject.slug,
      title: volunteerProject.title,
      description: volunteerProject.description,
      location: volunteerProject.location,
      startDate: volunteerProject.startDate,
      endDate: volunteerProject.endDate,
      volunteerGoal: volunteerProject.volunteerGoal,
      volunteerCount: volunteerProject.volunteerCount,
      fundingGoal: volunteerProject.fundingGoal,
      fundingRaised: volunteerProject.fundingRaised,
      status: volunteerProject.status,
      impactSummary: volunteerProject.impactSummary,
    })
    .from(volunteerProject)
    .where(where)
    .orderBy(desc(volunteerProject.createdAt))
    .limit(limit)
    .offset(offset),
  db
    .select({ count: sql<number>`count(*)::int` })
    .from(volunteerProject)
    .where(where),
]);

const total = countResult[0].count;
const totalPages = Math.ceil(total / limit);

const statusLabels: Record<string, string> = {
  recruiting: "En recrutement",
  in_progress: "En cours",
  completed: "Termin√©",
};
---

<BaseLayout title={t.volunteerPage.title} description={t.volunteerPage.description}>
  <main class="volunteer-page">
    <header class="page-header">
      <h1>{t.volunteerPage.title}</h1>
      <p>{t.volunteerPage.description}</p>
    </header>

    <section class="filters" aria-label="Filtres">
      <form method="get" action="" class="search-form" role="search">
        <input
          type="search"
          name="q"
          value={search}
          placeholder="Rechercher un projet..."
          aria-label="Rechercher un projet"
          class="search-input"
        />
        <select name="status" aria-label={t.common.status} class="filter-select">
          <option value="">{t.common.status}</option>
          <option value="recruiting" selected={statusFilter === "recruiting"}>En recrutement</option>
          <option value="in_progress" selected={statusFilter === "in_progress"}>En cours</option>
          <option value="completed" selected={statusFilter === "completed"}>Termin√©</option>
        </select>
        <button type="submit" class="search-button">{t.common.search}</button>
      </form>
    </section>

    <section class="projects-grid" aria-label={t.volunteerPage.projects}>
      {projects.length === 0 ? (
        <p class="no-results">{t.volunteerPage.noProjects}</p>
      ) : (
        <ul class="project-list" role="list">
          {projects.map((p) => {
            const volunteerPercent = p.volunteerGoal ? Math.min(100, Math.round((p.volunteerCount / p.volunteerGoal) * 100)) : 0;
            const fundingPercent = p.fundingGoal ? Math.min(100, Math.round((Number(p.fundingRaised) / Number(p.fundingGoal)) * 100)) : 0;
            return (
              <li class="project-card">
                <a href={getRelativeLocaleUrl(locale, `/benevolat/${p.slug}`)} class="project-link">
                  <div class="project-card-body">
                    <div class="project-meta-top">
                      <span class:list={["status-badge", p.status]}>{statusLabels[p.status] ?? p.status}</span>
                      {p.location && <span class="location">üìç {p.location}</span>}
                    </div>
                    <h2 class="project-title">{p.title}</h2>
                    {p.description && <p class="project-description">{p.description}</p>}

                    <div class="project-progress">
                      <div class="progress-row">
                        <span class="progress-label">{t.volunteerPage.volunteers}: {p.volunteerCount}/{p.volunteerGoal ?? "‚àû"}</span>
                        {p.volunteerGoal && (
                          <div class="progress-bar">
                            <div class="progress-fill volunteer-fill" style={`width: ${volunteerPercent}%`}></div>
                          </div>
                        )}
                      </div>
                      {p.fundingGoal && (
                        <div class="progress-row">
                          <span class="progress-label">{t.volunteerPage.funding}: {Number(p.fundingRaised).toFixed(0)} ‚Ç¨ / {Number(p.fundingGoal).toFixed(0)} ‚Ç¨</span>
                          <div class="progress-bar">
                            <div class="progress-fill funding-fill" style={`width: ${fundingPercent}%`}></div>
                          </div>
                        </div>
                      )}
                    </div>

                    {p.startDate && (
                      <div class="project-dates">
                        <span>Du {new Date(p.startDate).toLocaleDateString("fr-FR")}</span>
                        {p.endDate && <span>au {new Date(p.endDate).toLocaleDateString("fr-FR")}</span>}
                      </div>
                    )}
                  </div>
                </a>
              </li>
            );
          })}
        </ul>
      )}
    </section>

    {totalPages > 1 && (
      <nav class="pagination" aria-label="Pagination">
        {page > 1 && (
          <a href={`?q=${search}&status=${statusFilter}&page=${page - 1}`} class="pagination-link" rel="prev">{t.common.previous}</a>
        )}
        <span class="pagination-info">Page {page} / {totalPages}</span>
        {page < totalPages && (
          <a href={`?q=${search}&status=${statusFilter}&page=${page + 1}`} class="pagination-link" rel="next">{t.common.next}</a>
        )}
      </nav>
    )}
  </main>
</BaseLayout>

<style>
  .volunteer-page { max-width: 1200px; margin: 0 auto; padding: var(--space-6, 1.5rem) var(--space-4, 1rem); }
  .page-header { text-align: center; margin-bottom: var(--space-6, 1.5rem); }
  .page-header h1 { font-size: var(--text-3xl, 1.875rem); font-weight: 800; margin: 0 0 var(--space-2, 0.5rem); }
  .page-header p { color: var(--text-secondary, #64748b); font-size: var(--text-lg, 1.125rem); margin: 0; }
  .filters { margin-bottom: var(--space-6, 1.5rem); }
  .search-form { display: flex; gap: var(--space-2, 0.5rem); flex-wrap: wrap; }
  .search-input { flex: 1; min-width: 200px; padding: var(--space-2, 0.5rem) var(--space-3, 0.75rem); border: 1px solid var(--border-color, #e2e8f0); border-radius: var(--radius-md, 0.375rem); font-size: var(--text-sm, 0.875rem); }
  .filter-select { padding: var(--space-2, 0.5rem) var(--space-3, 0.75rem); border: 1px solid var(--border-color, #e2e8f0); border-radius: var(--radius-md, 0.375rem); font-size: var(--text-sm, 0.875rem); background: var(--bg-default, #fff); }
  .search-button { padding: var(--space-2, 0.5rem) var(--space-4, 1rem); background: var(--color-primary, #3b82f6); color: #fff; border: none; border-radius: var(--radius-md, 0.375rem); cursor: pointer; font-weight: 600; }

  .project-list { display: grid; grid-template-columns: repeat(auto-fill, minmax(360px, 1fr)); gap: var(--space-4, 1rem); list-style: none; padding: 0; margin: 0; }
  .project-card { border: 1px solid var(--border-color, #e2e8f0); border-radius: var(--radius-lg, 0.5rem); overflow: hidden; transition: box-shadow 0.2s; }
  .project-card:hover { box-shadow: var(--shadow-md, 0 4px 6px -1px rgba(0, 0, 0, 0.1)); }
  .project-link { text-decoration: none; color: inherit; display: block; }
  .project-card-body { padding: var(--space-4, 1rem); }
  .project-meta-top { display: flex; justify-content: space-between; align-items: center; margin-bottom: var(--space-2, 0.5rem); }
  .status-badge { font-size: var(--text-xs, 0.75rem); padding: 2px var(--space-2, 0.5rem); border-radius: var(--radius-sm, 0.25rem); font-weight: 600; }
  .status-badge.recruiting { background: #dcfce7; color: #166534; }
  .status-badge.in_progress { background: #dbeafe; color: #1e40af; }
  .status-badge.completed { background: #e2e8f0; color: #475569; }
  .location { font-size: var(--text-xs, 0.75rem); color: var(--text-muted, #94a3b8); }
  .project-title { font-size: var(--text-lg, 1.125rem); font-weight: 700; margin: 0 0 var(--space-2, 0.5rem); }
  .project-description { font-size: var(--text-sm, 0.875rem); color: var(--text-secondary, #64748b); margin: 0 0 var(--space-3, 0.75rem); display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }

  .project-progress { display: flex; flex-direction: column; gap: var(--space-2, 0.5rem); margin-bottom: var(--space-3, 0.75rem); }
  .progress-row { display: flex; flex-direction: column; gap: 2px; }
  .progress-label { font-size: var(--text-xs, 0.75rem); color: var(--text-muted, #94a3b8); font-weight: 500; }
  .progress-bar { height: 6px; background: var(--border-color, #e2e8f0); border-radius: 3px; overflow: hidden; }
  .progress-fill { height: 100%; border-radius: 3px; transition: width 0.3s; }
  .volunteer-fill { background: var(--color-primary, #3b82f6); }
  .funding-fill { background: var(--color-accent, #10b981); }

  .project-dates { font-size: var(--text-xs, 0.75rem); color: var(--text-muted, #94a3b8); display: flex; gap: var(--space-1, 0.25rem); }
  .no-results { text-align: center; color: var(--text-secondary, #64748b); padding: var(--space-8, 2rem) 0; font-size: var(--text-lg, 1.125rem); }
  .pagination { display: flex; justify-content: center; align-items: center; gap: var(--space-4, 1rem); margin-top: var(--space-8, 2rem); }
  .pagination-link { padding: var(--space-2, 0.5rem) var(--space-4, 1rem); border: 1px solid var(--border-color, #e2e8f0); border-radius: var(--radius-md, 0.375rem); text-decoration: none; color: var(--color-primary, #3b82f6); font-weight: 500; }
  .pagination-info { color: var(--text-secondary, #64748b); font-size: var(--text-sm, 0.875rem); }
</style>
