---
import { getCollection } from "astro:content";
import BaseLayout from "@layouts/BaseLayout.astro";

// 1. On réutilise tes composants "briques"
import PostGrid from "@components/modules/blog/lists/PostGrid.astro";
import PostCard from "@components/modules/blog/cards/PostCard.astro";


import Avatar from '@components/ui/Avatar/Avatar.astro';

export const prerender = true;

export async function getStaticPaths() {
  const LANG = "fr";
  const allPosts = await getCollection("blog");
  const frPosts = allPosts.filter((p) => p.data.lang === LANG);

  const authors = new Map();
  frPosts.forEach((post) => {
    post.data.authors.forEach((author) => {
      if (!authors.has(author.slug)) {
        authors.set(author.slug, author);
      }
    });
  });

  return Array.from(authors.values()).map((author) => ({
    params: { slug: author.slug },
    props: { author },
  }));
}

const { author } = Astro.props;
const { slug } = Astro.params;
const LANG = "fr";

const allPosts = await getCollection("blog");

const posts = allPosts
  .filter((p) => p.data.lang === LANG)
  .filter((p) => p.data.authors.some((a) => a.slug === slug))
  .sort(
    (a, b) =>
      new Date(b.data.publishedAt || 0).getTime() -
      new Date(a.data.publishedAt || 0).getTime(),
  );

// Helper pour les initiales
function getInitials(name: string) {
  if (!name) return "?";
  return name
    .split(" ")
    .map((w) => w[0])
    .join("")
    .toUpperCase()
    .slice(0, 2);
}
---

<BaseLayout
  title={`Articles de ${author.name}`}
  description={`Découvrez les articles écrits par ${author.name}`}
  lang={LANG}
>
  <main class="container mx-auto px-4 py-12" transition:name="author">
    <header
      class="mb-16 flex flex-col sm:flex-row items-center sm:items-start gap-8 border-b pb-12 max-w-4xl mx-auto text-center sm:text-left"
    >

      <Avatar variant="retro" size="lg" src={author.avatar} fallback={author.name}  />

      <div class="space-y-4">
        <div>
          <h1 class="text-4xl font-extrabold tracking-tight lg:text-5xl">
            {author.name}
          </h1>
          <p class="text-muted-foreground font-medium mt-1">Auteur</p>
        </div>

        {
          author.bio && (
            <p class="text-lg text-muted-foreground max-w-2xl leading-relaxed">
              {author.bio}
            </p>
          )
        }
      </div>
    </header>

    {/* LISTE DES ARTICLES (Réutilisation Grid + Card) */}
    <section>
      <h2 class="text-2xl font-bold mb-8 pl-1 border-l-4 border-primary">
        {posts.length} Article{posts.length > 1 ? "s" : ""} publié{
          posts.length > 1 ? "s" : ""
        }
      </h2>

      {
        posts.length > 0 ? (
          <PostGrid>
            {posts.map((post) => (
              <PostCard post={post} lang={LANG} />
            ))}
          </PostGrid>
        ) : (
          <p class="text-muted-foreground italic">
            Cet auteur n'a plus d'articles en ligne.
          </p>
        )
      }
    </section>
  </main>
</BaseLayout>
