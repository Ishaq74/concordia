---
export const prerender = false;

import BaseLayout from "@layouts/BaseLayout.astro";
import { getDrizzle } from "@database/drizzle";
import { getRelativeLocaleUrl } from "@lib/i18n/locale-url";
import { userRole } from "@database/schemas";
import { eq, and, sql, desc } from "drizzle-orm";
import { user } from "@database/schemas";
import { article, classified, place, mediationCase, auditLog } from "@database/schemas";
import translations from "@i18n/fr.json";

const t = translations;
const locale = "fr";
const db = await getDrizzle();
const currentUser = Astro.locals.user;

if (!currentUser) {
  return Astro.redirect(getRelativeLocaleUrl(locale, "/auth/connexion"));
}

const adminRoleCheck = await db
  .select({ role: userRole.role })
  .from(userRole)
  .where(and(eq(userRole.userId, currentUser.id), eq(userRole.role, "admin")))
  .limit(1);

if (adminRoleCheck.length === 0) {
  return Astro.redirect(getRelativeLocaleUrl(locale, "/dashboard"));
}

const [
  totalUsersResult,
  pendingArticlesResult,
  pendingPlacesResult,
  pendingAdsResult,
  activeCasesResult,
  recentAuditLogs,
] = await Promise.all([
  db.select({ count: sql<number>`count(*)::int` }).from(user),
  db.select({ count: sql<number>`count(*)::int` }).from(article).where(eq(article.status, "pending_review")),
  db.select({ count: sql<number>`count(*)::int` }).from(place).where(eq(place.status, "pending_review")),
  db.select({ count: sql<number>`count(*)::int` }).from(classified).where(eq(classified.status, "pending_review")),
  db.select({ count: sql<number>`count(*)::int` }).from(mediationCase).where(
    sql`${mediationCase.status} IN ('opened', 'assigned', 'in_progress')`,
  ),
  db.select({
    id: auditLog.id,
    userId: auditLog.userId,
    action: auditLog.action,
    targetId: auditLog.targetId,
    createdAt: auditLog.createdAt,
  })
    .from(auditLog)
    .orderBy(desc(auditLog.createdAt))
    .limit(20),
]);

const stats = {
  totalUsers: totalUsersResult[0].count,
  pendingArticles: pendingArticlesResult[0].count,
  pendingPlaces: pendingPlacesResult[0].count,
  pendingAds: pendingAdsResult[0].count,
  activeCases: activeCasesResult[0].count,
};

interface AdminNavItem {
  key: string;
  label: string;
  href: string;
  icon: string;
  badge?: number;
}

const adminNav: AdminNavItem[] = [
  { key: "dashboard", label: t.adminPanel.dashboard, href: getRelativeLocaleUrl(locale, "/admin"), icon: "üìä" },
  { key: "users", label: t.adminPanel.users, href: getRelativeLocaleUrl(locale, "/admin/users"), icon: "üë•", badge: stats.totalUsers },
  { key: "moderation", label: t.adminPanel.moderation, href: getRelativeLocaleUrl(locale, "/admin/moderation"), icon: "üõ°Ô∏è", badge: stats.pendingArticles + stats.pendingPlaces + stats.pendingAds },
  { key: "audit", label: t.adminPanel.audit, href: getRelativeLocaleUrl(locale, "/admin/audit"), icon: "üìã" },
];
---

<BaseLayout title={t.adminPanel.title} description="Administration de la plateforme Concordia">
  <div class="admin-layout">
    <nav class="admin-sidebar" aria-label={t.adminPanel.title}>
      <h2 class="admin-sidebar-title">{t.adminPanel.title}</h2>
      <ul class="admin-nav" role="list">
        {adminNav.map((item) => (
          <li>
            <a href={item.href} class:list={["admin-nav-link", { active: item.key === "dashboard" }]}>
              <span class="admin-nav-icon">{item.icon}</span>
              <span class="admin-nav-label">{item.label}</span>
              {item.badge !== undefined && item.badge > 0 && (
                <span class="admin-badge">{item.badge}</span>
              )}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <main class="admin-content">
      <h1>{t.adminPanel.dashboard}</h1>

      <section class="admin-stats" aria-label="Statistiques">
        <div class="admin-stat-card">
          <span class="stat-number">{stats.totalUsers}</span>
          <span class="stat-label">{t.adminPanel.users}</span>
        </div>
        <div class="admin-stat-card alert">
          <span class="stat-number">{stats.pendingArticles}</span>
          <span class="stat-label">{t.adminPanel.pendingArticles}</span>
        </div>
        <div class="admin-stat-card alert">
          <span class="stat-number">{stats.pendingPlaces}</span>
          <span class="stat-label">{t.adminPanel.pendingPlaces}</span>
        </div>
        <div class="admin-stat-card alert">
          <span class="stat-number">{stats.pendingAds}</span>
          <span class="stat-label">{t.adminPanel.pendingAds}</span>
        </div>
        <div class="admin-stat-card">
          <span class="stat-number">{stats.activeCases}</span>
          <span class="stat-label">M√©diations actives</span>
        </div>
      </section>

      <section class="audit-section" aria-label={t.adminPanel.audit}>
        <h2>{t.adminPanel.audit} ‚Äî Actions r√©centes</h2>
        {recentAuditLogs.length === 0 ? (
          <p class="empty">Aucune action enregistr√©e.</p>
        ) : (
          <div class="audit-table-wrapper">
            <table class="audit-table">
              <thead>
                <tr>
                  <th>Action</th>
                  <th>Cible</th>
                  <th>{t.common.date}</th>
                </tr>
              </thead>
              <tbody>
                {recentAuditLogs.map((log) => (
                  <tr>
                    <td class="audit-action">{log.action}</td>
                    <td class="audit-entity-id">{log.targetId ? log.targetId.slice(0, 12) + "‚Ä¶" : "‚Äî"}</td>
                    <td class="audit-date">
                      {new Date(log.createdAt).toLocaleDateString("fr-FR", { day: "numeric", month: "short", hour: "2-digit", minute: "2-digit" })}
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        )}
      </section>
    </main>
  </div>
</BaseLayout>

<style>
  .admin-layout {
    display: grid;
    grid-template-columns: 240px 1fr;
    min-height: calc(100vh - 80px);
  }

  .admin-sidebar {
    background: #1e293b;
    color: #f8fafc;
    padding: var(--space-4, 1rem) 0;
    position: sticky;
    top: 80px;
    height: calc(100vh - 80px);
    overflow-y: auto;
  }

  .admin-sidebar-title {
    font-size: var(--text-lg, 1.125rem);
    font-weight: 700;
    padding: 0 var(--space-4, 1rem) var(--space-3, 0.75rem);
    border-bottom: 1px solid #334155;
    margin: 0 0 var(--space-2, 0.5rem) 0;
  }

  .admin-nav { list-style: none; padding: 0; margin: 0; }
  .admin-nav-link {
    display: flex;
    align-items: center;
    gap: var(--space-2, 0.5rem);
    padding: var(--space-2, 0.5rem) var(--space-4, 1rem);
    text-decoration: none;
    color: #94a3b8;
    font-size: var(--text-sm, 0.875rem);
    transition: background-color 0.15s, color 0.15s;
    border-left: 3px solid transparent;
  }
  .admin-nav-link:hover { background: #334155; color: #f8fafc; }
  .admin-nav-link.active { background: #334155; color: #3b82f6; border-left-color: #3b82f6; font-weight: 600; }
  .admin-nav-icon { flex-shrink: 0; }
  .admin-nav-label { flex: 1; }
  .admin-badge {
    background: #ef4444;
    color: #fff;
    font-size: var(--text-xs, 0.75rem);
    font-weight: 700;
    padding: 0 6px;
    border-radius: 10px;
    min-width: 18px;
    text-align: center;
  }

  .admin-content {
    padding: var(--space-6, 1.5rem) var(--space-8, 2rem);
    max-width: 1200px;
  }

  h1 { font-size: var(--text-2xl, 1.5rem); font-weight: 800; margin: 0 0 var(--space-6, 1.5rem); }

  .admin-stats {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: var(--space-3, 0.75rem);
    margin-bottom: var(--space-8, 2rem);
  }
  .admin-stat-card {
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: var(--radius-lg, 0.5rem);
    padding: var(--space-4, 1rem);
    text-align: center;
  }
  .admin-stat-card.alert { border-color: #fbbf24; background: #fffbeb; }
  .stat-number { display: block; font-size: var(--text-3xl, 1.875rem); font-weight: 800; }
  .admin-stat-card.alert .stat-number { color: #d97706; }
  .stat-label { font-size: var(--text-sm, 0.875rem); color: var(--text-secondary, #64748b); }

  .audit-section h2 { font-size: var(--text-lg, 1.125rem); font-weight: 700; margin: 0 0 var(--space-3, 0.75rem); }
  .empty { color: var(--text-secondary, #64748b); }
  .audit-table-wrapper { overflow-x: auto; }
  .audit-table { width: 100%; border-collapse: collapse; font-size: var(--text-sm, 0.875rem); }
  .audit-table th { text-align: left; padding: var(--space-2, 0.5rem) var(--space-3, 0.75rem); border-bottom: 2px solid var(--border-color, #e2e8f0); font-weight: 600; color: var(--text-secondary, #64748b); }
  .audit-table td { padding: var(--space-2, 0.5rem) var(--space-3, 0.75rem); border-bottom: 1px solid var(--border-color, #e2e8f0); }
  .audit-action { font-weight: 500; }
  .audit-entity-id { font-family: monospace; font-size: var(--text-xs, 0.75rem); }
  .audit-date { white-space: nowrap; color: var(--text-muted, #94a3b8); font-size: var(--text-xs, 0.75rem); }

  @media (max-width: 768px) {
    .admin-layout { grid-template-columns: 1fr; }
    .admin-sidebar {
      position: static;
      height: auto;
      border-bottom: 1px solid #334155;
    }
    .admin-nav {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-1, 0.25rem);
      padding: var(--space-2, 0.5rem);
    }
    .admin-nav-link { border-left: none; border-radius: var(--radius-md, 0.375rem); }
  }
</style>
