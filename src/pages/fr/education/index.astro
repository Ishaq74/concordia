---
export const prerender = false;

import BaseLayout from "@layouts/BaseLayout.astro";
import { getDrizzle } from "@database/drizzle";
import { educationModule } from "@database/schemas";
import { eq, and, sql, desc } from "drizzle-orm";
import translations from "@i18n/fr.json";
import { getRelativeLocaleUrl } from "@lib/i18n/locale-url";

const t = translations;
const locale = "fr";
const db = await getDrizzle();

const url = new URL(Astro.request.url);
const search = url.searchParams.get("q") ?? "";
const difficulty = url.searchParams.get("difficulty") ?? "";
const page = Math.max(1, parseInt(url.searchParams.get("page") ?? "1", 10));
const limit = 12;
const offset = (page - 1) * limit;

const conditions: ReturnType<typeof eq>[] = [eq(educationModule.status, "published")];
if (search) {
  conditions.push(
    sql`(${educationModule.title} ILIKE ${"%" + search + "%"} OR ${educationModule.description} ILIKE ${"%" + search + "%"})`,
  );
}
if (difficulty) {
  conditions.push(eq(educationModule.difficulty, difficulty as "beginner" | "intermediate" | "advanced"));
}

const where = and(...conditions);

const [modules, countResult] = await Promise.all([
  db
    .select({
      id: educationModule.id,
      slug: educationModule.slug,
      title: educationModule.title,
      description: educationModule.description,
      coverImageUrl: educationModule.coverImageUrl,
      difficulty: educationModule.difficulty,
      estimatedDurationHours: educationModule.estimatedDurationHours,
      isFree: educationModule.isFree,
      price: educationModule.price,
      lessonCount: educationModule.lessonCount,
      enrollmentCount: educationModule.enrollmentCount,
    })
    .from(educationModule)
    .where(where)
    .orderBy(desc(educationModule.publishedAt))
    .limit(limit)
    .offset(offset),
  db
    .select({ count: sql<number>`count(*)::int` })
    .from(educationModule)
    .where(where),
]);

const total = countResult[0].count;
const totalPages = Math.ceil(total / limit);

const difficultyLabels: Record<string, string> = {
  beginner: t.educationPage.beginner,
  intermediate: t.educationPage.intermediate,
  advanced: t.educationPage.advanced,
};
---

<BaseLayout title={t.educationPage.title} description={t.educationPage.description}>
  <main class="education-page">
    <header class="page-header">
      <h1>{t.educationPage.title}</h1>
      <p>{t.educationPage.description}</p>
    </header>

    <section class="filters" aria-label="Filtres">
      <form method="get" action="" class="search-form" role="search">
        <input
          type="search"
          name="q"
          value={search}
          placeholder="Rechercher un module..."
          aria-label="Rechercher un module"
          class="search-input"
        />
        <select name="difficulty" aria-label={t.educationPage.difficulty} class="filter-select">
          <option value="">{t.educationPage.difficulty}</option>
          <option value="beginner" selected={difficulty === "beginner"}>{t.educationPage.beginner}</option>
          <option value="intermediate" selected={difficulty === "intermediate"}>{t.educationPage.intermediate}</option>
          <option value="advanced" selected={difficulty === "advanced"}>{t.educationPage.advanced}</option>
        </select>
        <button type="submit" class="search-button">{t.common.search}</button>
      </form>
    </section>

    <section class="modules-grid" aria-label={t.educationPage.modules}>
      {modules.length === 0 ? (
        <p class="no-results">{t.educationPage.noModules}</p>
      ) : (
        <ul class="module-list" role="list">
          {modules.map((m) => (
            <li class="module-card">
              <a href={getRelativeLocaleUrl(locale, `/education/${m.slug}`)} class="module-link">
                {m.coverImageUrl && (
                  <img src={m.coverImageUrl} alt="" class="module-cover" loading="lazy" />
                )}
                <div class="module-card-body">
                  <div class="module-badges">
                    <span class:list={["difficulty-badge", m.difficulty]}>
                      {difficultyLabels[m.difficulty] ?? m.difficulty}
                    </span>
                    {m.isFree ? (
                      <span class="free-badge">Gratuit</span>
                    ) : m.price && (
                      <span class="price-badge">{Number(m.price).toFixed(2)} â‚¬</span>
                    )}
                  </div>
                  <h2 class="module-title">{m.title}</h2>
                  {m.description && <p class="module-description">{m.description}</p>}
                  <div class="module-meta">
                    <span>{m.lessonCount} {t.educationPage.lessons}</span>
                    {m.estimatedDurationHours && (
                      <span>{Number(m.estimatedDurationHours)}h</span>
                    )}
                    <span>{m.enrollmentCount} inscrits</span>
                  </div>
                </div>
              </a>
            </li>
          ))}
        </ul>
      )}
    </section>

    {totalPages > 1 && (
      <nav class="pagination" aria-label="Pagination">
        {page > 1 && (
          <a href={`?q=${search}&difficulty=${difficulty}&page=${page - 1}`} class="pagination-link" rel="prev">{t.common.previous}</a>
        )}
        <span class="pagination-info">Page {page} / {totalPages}</span>
        {page < totalPages && (
          <a href={`?q=${search}&difficulty=${difficulty}&page=${page + 1}`} class="pagination-link" rel="next">{t.common.next}</a>
        )}
      </nav>
    )}
  </main>
</BaseLayout>

<style>
  .education-page { max-width: 1200px; margin: 0 auto; padding: var(--space-6, 1.5rem) var(--space-4, 1rem); }
  .page-header { text-align: center; margin-bottom: var(--space-6, 1.5rem); }
  .page-header h1 { font-size: var(--text-3xl, 1.875rem); font-weight: 800; margin: 0 0 var(--space-2, 0.5rem); }
  .page-header p { color: var(--text-secondary, #64748b); font-size: var(--text-lg, 1.125rem); margin: 0; }
  .filters { margin-bottom: var(--space-6, 1.5rem); }
  .search-form { display: flex; gap: var(--space-2, 0.5rem); flex-wrap: wrap; }
  .search-input { flex: 1; min-width: 200px; padding: var(--space-2, 0.5rem) var(--space-3, 0.75rem); border: 1px solid var(--border-color, #e2e8f0); border-radius: var(--radius-md, 0.375rem); font-size: var(--text-sm, 0.875rem); }
  .filter-select { padding: var(--space-2, 0.5rem) var(--space-3, 0.75rem); border: 1px solid var(--border-color, #e2e8f0); border-radius: var(--radius-md, 0.375rem); font-size: var(--text-sm, 0.875rem); background: var(--bg-default, #fff); }
  .search-button { padding: var(--space-2, 0.5rem) var(--space-4, 1rem); background: var(--color-primary, #3b82f6); color: #fff; border: none; border-radius: var(--radius-md, 0.375rem); cursor: pointer; font-weight: 600; }

  .module-list { display: grid; grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); gap: var(--space-4, 1rem); list-style: none; padding: 0; margin: 0; }
  .module-card { border: 1px solid var(--border-color, #e2e8f0); border-radius: var(--radius-lg, 0.5rem); overflow: hidden; transition: box-shadow 0.2s; }
  .module-card:hover { box-shadow: var(--shadow-md, 0 4px 6px -1px rgba(0, 0, 0, 0.1)); }
  .module-link { text-decoration: none; color: inherit; display: block; }
  .module-cover { width: 100%; height: 180px; object-fit: cover; }
  .module-card-body { padding: var(--space-4, 1rem); }
  .module-badges { display: flex; gap: var(--space-2, 0.5rem); margin-bottom: var(--space-2, 0.5rem); }
  .difficulty-badge { font-size: var(--text-xs, 0.75rem); padding: 1px var(--space-2, 0.5rem); border-radius: var(--radius-sm, 0.25rem); font-weight: 600; }
  .difficulty-badge.beginner { background: #dcfce7; color: #166534; }
  .difficulty-badge.intermediate { background: #fef9c3; color: #854d0e; }
  .difficulty-badge.advanced { background: #fecaca; color: #991b1b; }
  .free-badge { font-size: var(--text-xs, 0.75rem); background: var(--color-accent, #10b981); color: #fff; padding: 1px var(--space-2, 0.5rem); border-radius: var(--radius-sm, 0.25rem); font-weight: 600; }
  .price-badge { font-size: var(--text-xs, 0.75rem); background: var(--color-primary, #3b82f6); color: #fff; padding: 1px var(--space-2, 0.5rem); border-radius: var(--radius-sm, 0.25rem); font-weight: 600; }
  .module-title { font-size: var(--text-lg, 1.125rem); font-weight: 700; margin: 0 0 var(--space-2, 0.5rem); }
  .module-description { font-size: var(--text-sm, 0.875rem); color: var(--text-secondary, #64748b); margin: 0 0 var(--space-3, 0.75rem); display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
  .module-meta { display: flex; gap: var(--space-3, 0.75rem); font-size: var(--text-xs, 0.75rem); color: var(--text-muted, #94a3b8); }
  .no-results { text-align: center; color: var(--text-secondary, #64748b); padding: var(--space-8, 2rem) 0; font-size: var(--text-lg, 1.125rem); }
  .pagination { display: flex; justify-content: center; align-items: center; gap: var(--space-4, 1rem); margin-top: var(--space-8, 2rem); }
  .pagination-link { padding: var(--space-2, 0.5rem) var(--space-4, 1rem); border: 1px solid var(--border-color, #e2e8f0); border-radius: var(--radius-md, 0.375rem); text-decoration: none; color: var(--color-primary, #3b82f6); font-weight: 500; }
  .pagination-info { color: var(--text-secondary, #64748b); font-size: var(--text-sm, 0.875rem); }
</style>
