---
export const prerender = false;

import BaseLayout from "@layouts/BaseLayout.astro";
import { getDrizzle } from "@database/drizzle";
import { product } from "@database/schemas";
import { sql, desc } from "drizzle-orm";
import translations from "@i18n/fr.json";

const t = translations;
const db = await getDrizzle();

const url = new URL(Astro.request.url);
const search = url.searchParams.get("q") ?? "";
const categoryFilter = url.searchParams.get("category") ?? "";
const page = Math.max(1, parseInt(url.searchParams.get("page") ?? "1", 10));
const limit = 16;
const offset = (page - 1) * limit;

const conditions: ReturnType<typeof sql>[] = [];
if (search) {
  conditions.push(
    sql`(${product.name} ILIKE ${"%" + search + "%"} OR ${product.description} ILIKE ${"%" + search + "%"})`,
  );
}
if (categoryFilter) {
  conditions.push(sql`${product.category} = ${categoryFilter}`);
}

const where = conditions.length > 0 ? sql.join(conditions, sql` AND `) : undefined;

const [products, countResult, categories] = await Promise.all([
  db
    .select({
      id: product.id,
      name: product.name,
      description: product.description,
      category: product.category,
      isLocal: product.isLocal,
      seasonStart: product.seasonStart,
      seasonEnd: product.seasonEnd,
    })
    .from(product)
    .where(where)
    .orderBy(desc(product.createdAt))
    .limit(limit)
    .offset(offset),
  db
    .select({ count: sql<number>`count(*)::int` })
    .from(product)
    .where(where),
  db
    .selectDistinct({ category: product.category })
    .from(product)
    .where(sql`${product.category} IS NOT NULL`),
]);

const total = countResult[0].count;
const totalPages = Math.ceil(total / limit);

const now = new Date();
const currentMonth = now.getMonth() + 1;
function isInSeason(start: number | null, end: number | null): boolean {
  if (!start || !end) return true;
  if (start <= end) return currentMonth >= start && currentMonth <= end;
  return currentMonth >= start || currentMonth <= end;
}

