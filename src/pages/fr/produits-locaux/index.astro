---

<BaseLayout title="Produits locaux" description="DÃ©couvrez les produits locaux de notre communautÃ©, leurs saisons et les producteurs.">
  <main class="products-page">
    <header class="page-header">
      <h1>Produits locaux</h1>
      <p>DÃ©couvrez les produits du terroir et des producteurs locaux.</p>
    </header>

    <section class="filters" aria-label="Filtres">
      <form method="get" action="" class="search-form" role="search">
        <input
          type="search"
          name="q"
          value={search}
          placeholder="Rechercher un produit..."
          aria-label="Rechercher un produit"
          class="search-input"
        />
        <select name="category" aria-label="CatÃ©gorie" class="filter-select">
          <option value="">Toutes catÃ©gories</option>
          {categories.map((c) => (
            <option value={c.category ?? ""} selected={categoryFilter === c.category}>{c.category}</option>
          ))}
        </select>
        <button type="submit" class="search-button">{t.common.search}</button>
      </form>
    </section>

    <section class="products-grid" aria-label="Produits">
      {products.length === 0 ? (
        <p class="no-results">{t.common.noResults}</p>
      ) : (
        <ul class="product-list" role="list">
          {products.map((p) => {
            const inSeason = isInSeason(p.seasonStart, p.seasonEnd);
            return (
              <li class="product-card">
                <div class="product-body">
                  <div class="product-badges">
                    {p.isLocal && <span class="local-badge">ðŸŒ¿ Local</span>}
                    {inSeason ? (
                      <span class="season-badge in-season">De saison</span>
                    ) : (
                      <span class="season-badge off-season">Hors saison</span>
                    )}
                  </div>
                  <h2 class="product-name">{p.name}</h2>
                  {p.description && <p class="product-description">{p.description}</p>}
                  {p.category && <span class="product-category">{p.category}</span>}
                  {p.seasonStart && p.seasonEnd && (
                    <div class="season-range">
                      Saison : {monthNames[p.seasonStart - 1]} â€” {monthNames[p.seasonEnd - 1]}
                    </div>
                  )}
                </div>
              </li>
            );
          })}
        </ul>
      )}
    </section>

    {totalPages > 1 && (
      <nav class="pagination" aria-label="Pagination">
        {page > 1 && (
          <a href={`?q=${search}&category=${categoryFilter}&page=${page - 1}`} class="pagination-link" rel="prev">{t.common.previous}</a>
        )}
        <span class="pagination-info">Page {page} / {totalPages}</span>
        {page < totalPages && (
          <a href={`?q=${search}&category=${categoryFilter}&page=${page + 1}`} class="pagination-link" rel="next">{t.common.next}</a>
        )}
      </nav>
    )}
