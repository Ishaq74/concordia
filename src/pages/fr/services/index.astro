---
export const prerender = false;

import BaseLayout from "@layouts/BaseLayout.astro";
import { getDrizzle } from "@database/drizzle";
import { localService, category } from "@database/schemas";
import { eq, and, sql, desc } from "drizzle-orm";
import translations from "@i18n/fr.json";
import { getRelativeLocaleUrl } from "@lib/i18n/locale-url";

const t = translations;
const locale = "fr";
const db = await getDrizzle();

const url = new URL(Astro.request.url);
const search = url.searchParams.get("q") ?? "";
const categorySlug = url.searchParams.get("category") ?? "";
const page = Math.max(1, parseInt(url.searchParams.get("page") ?? "1", 10));
const limit = 12;
const offset = (page - 1) * limit;

const conditions: ReturnType<typeof eq>[] = [eq(localService.status, "active")];
if (search) {
  conditions.push(
    sql`(${localService.title} ILIKE ${"%" + search + "%"} OR ${localService.description} ILIKE ${"%" + search + "%"})`,
  );
}
if (categorySlug) {
  conditions.push(
    sql`${localService.categoryId} IN (SELECT id FROM category WHERE slug = ${categorySlug})`,
  );
}

const where = and(...conditions);

const [services, countResult] = await Promise.all([
  db
    .select({
      id: localService.id,
      title: localService.title,
      description: localService.description,
      basePrice: localService.basePrice,
      priceType: localService.priceType,
      currency: localService.currency,
      durationMinutes: localService.durationMinutes,
      isMobile: localService.isMobile,
    })
    .from(localService)
    .where(where)
    .orderBy(desc(localService.createdAt))
    .limit(limit)
    .offset(offset),
  db
    .select({ count: sql<number>`count(*)::int` })
    .from(localService)
    .where(where),
]);

const total = countResult[0].count;
const totalPages = Math.ceil(total / limit);

const categories = await db
  .select({
    slug: category.slug,
    name: sql<string>`(SELECT ct.name FROM category_translation ct WHERE ct.category_id = ${category.id} AND ct.lang = ${locale} LIMIT 1)`,
  })
  .from(category)
  .where(and(eq(category.type, "service"), eq(category.isActive, true)));
---

<BaseLayout title={t.servicesPage.title} description={t.servicesPage.description}>
  <main class="services-page">
    <header class="page-header">
      <h1>{t.servicesPage.title}</h1>
      <p>{t.servicesPage.description}</p>
    </header>

    <section class="filters" aria-label="Filtres">
      <form method="get" action="" class="search-form" role="search">
        <input
          type="search"
          name="q"
          value={search}
          placeholder="Rechercher un service..."
          aria-label="Rechercher un service"
          class="search-input"
        />
        <select name="category" aria-label="Catégorie" class="filter-select">
          <option value="">Catégorie</option>
          {categories.map((cat) => (
            <option value={cat.slug} selected={cat.slug === categorySlug}>{cat.name}</option>
          ))}
        </select>
        <button type="submit" class="search-button">{t.common.search}</button>
      </form>
    </section>

    <section class="services-grid" aria-label={t.servicesPage.title}>
      {services.length === 0 ? (
        <p class="no-results">{t.servicesPage.noServices}</p>
      ) : (
        <ul class="service-list" role="list">
          {services.map((s) => (
            <li class="service-card">
              <a href={getRelativeLocaleUrl(locale, `/services/${s.id}`)} class="service-link">
                <div class="service-card-body">
                  <h2 class="service-title">{s.title}</h2>
                  <p class="service-description">{s.description}</p>
                  <div class="service-meta">
                    {s.basePrice && (
                      <span class="service-price">
                        {Number(s.basePrice).toFixed(2)} {s.currency}
                        {s.priceType && ` / ${s.priceType}`}
                      </span>
                    )}
                    {s.durationMinutes && (
                      <span class="service-duration">{s.durationMinutes} min</span>
                    )}
                    {s.isMobile && <span class="service-mobile">Se déplace</span>}
                  </div>
                </div>
              </a>
            </li>
          ))}
        </ul>
      )}
    </section>

    {totalPages > 1 && (
      <nav class="pagination" aria-label="Pagination">
        {page > 1 && (
          <a href={`?q=${search}&category=${categorySlug}&page=${page - 1}`} class="pagination-link" rel="prev">
            {t.common.previous}
          </a>
        )}
        <span class="pagination-info">Page {page} / {totalPages}</span>
        {page < totalPages && (
          <a href={`?q=${search}&category=${categorySlug}&page=${page + 1}`} class="pagination-link" rel="next">
            {t.common.next}
          </a>
        )}
      </nav>
    )}
  </main>
</BaseLayout>

<style>
  .services-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-6, 1.5rem) var(--space-4, 1rem);
  }

  .page-header { text-align: center; margin-bottom: var(--space-6, 1.5rem); }
  .page-header h1 { font-size: var(--text-3xl, 1.875rem); font-weight: 800; margin: 0 0 var(--space-2, 0.5rem); }
  .page-header p { color: var(--text-secondary, #64748b); font-size: var(--text-lg, 1.125rem); margin: 0; }

  .filters { margin-bottom: var(--space-6, 1.5rem); }
  .search-form { display: flex; gap: var(--space-2, 0.5rem); flex-wrap: wrap; }
  .search-input { flex: 1; min-width: 200px; padding: var(--space-2, 0.5rem) var(--space-3, 0.75rem); border: 1px solid var(--border-color, #e2e8f0); border-radius: var(--radius-md, 0.375rem); font-size: var(--text-sm, 0.875rem); }
  .filter-select { padding: var(--space-2, 0.5rem) var(--space-3, 0.75rem); border: 1px solid var(--border-color, #e2e8f0); border-radius: var(--radius-md, 0.375rem); font-size: var(--text-sm, 0.875rem); background: var(--bg-default, #fff); }
  .search-button { padding: var(--space-2, 0.5rem) var(--space-4, 1rem); background: var(--color-primary, #3b82f6); color: #fff; border: none; border-radius: var(--radius-md, 0.375rem); cursor: pointer; font-weight: 600; }

  .service-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-4, 1rem);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .service-card {
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: var(--radius-lg, 0.5rem);
    overflow: hidden;
    transition: box-shadow 0.2s;
  }

  .service-card:hover { box-shadow: var(--shadow-md, 0 4px 6px -1px rgba(0, 0, 0, 0.1)); }
  .service-link { text-decoration: none; color: inherit; display: block; }
  .service-card-body { padding: var(--space-4, 1rem); }

  .service-title { font-size: var(--text-lg, 1.125rem); font-weight: 700; margin: 0 0 var(--space-2, 0.5rem); }

  .service-description {
    font-size: var(--text-sm, 0.875rem);
    color: var(--text-secondary, #64748b);
    margin: 0 0 var(--space-3, 0.75rem);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .service-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2, 0.5rem);
    font-size: var(--text-xs, 0.75rem);
  }

  .service-price { font-weight: 700; color: var(--color-primary, #3b82f6); }
  .service-duration { color: var(--text-muted, #94a3b8); }

  .service-mobile {
    background: var(--color-accent, #10b981);
    color: #fff;
    padding: 1px var(--space-2, 0.5rem);
    border-radius: var(--radius-sm, 0.25rem);
    font-weight: 600;
  }

  .no-results { text-align: center; color: var(--text-secondary, #64748b); padding: var(--space-8, 2rem) 0; font-size: var(--text-lg, 1.125rem); }

  .pagination { display: flex; justify-content: center; align-items: center; gap: var(--space-4, 1rem); margin-top: var(--space-8, 2rem); }
  .pagination-link { padding: var(--space-2, 0.5rem) var(--space-4, 1rem); border: 1px solid var(--border-color, #e2e8f0); border-radius: var(--radius-md, 0.375rem); text-decoration: none; color: var(--color-primary, #3b82f6); font-weight: 500; }
  .pagination-info { color: var(--text-secondary, #64748b); font-size: var(--text-sm, 0.875rem); }
</style>
