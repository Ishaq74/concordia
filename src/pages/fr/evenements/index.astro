---
export const prerender = false;

import BaseLayout from "@layouts/BaseLayout.astro";
import { getDrizzle } from "@database/drizzle";
import { event, category } from "@database/schemas";
import { eq, and, sql, desc, gte } from "drizzle-orm";
import translations from "@i18n/fr.json";
import { getRelativeLocaleUrl } from "@lib/i18n/locale-url";

const t = translations;
const locale = "fr";
const db = await getDrizzle();

const url = new URL(Astro.request.url);
const search = url.searchParams.get("q") ?? "";
const categorySlug = url.searchParams.get("category") ?? "";
const showPast = url.searchParams.get("past") === "1";
const page = Math.max(1, parseInt(url.searchParams.get("page") ?? "1", 10));
const limit = 12;
const offset = (page - 1) * limit;

const now = new Date();
const conditions: ReturnType<typeof eq>[] = [];

if (!showPast) {
  conditions.push(gte(event.startAt, now));
}

if (search) {
  conditions.push(
    sql`(${event.title} ILIKE ${"%" + search + "%"} OR ${event.description} ILIKE ${"%" + search + "%"})`,
  );
}

if (categorySlug) {
  conditions.push(
    sql`${event.categoryId} IN (SELECT id FROM category WHERE slug = ${categorySlug})`,
  );
}

const where = conditions.length > 0 ? and(...conditions) : undefined;

const [events, countResult] = await Promise.all([
  db
    .select({
      id: event.id,
      slug: event.slug,
      title: event.title,
      description: event.description,
      startAt: event.startAt,
      endAt: event.endAt,
      isPaid: event.isPaid,
      price: event.price,
      maxParticipants: event.maxParticipants,
      type: event.type,
    })
    .from(event)
    .where(where)
    .orderBy(showPast ? desc(event.startAt) : event.startAt)
    .limit(limit)
    .offset(offset),
  db
    .select({ count: sql<number>`count(*)::int` })
    .from(event)
    .where(where),
]);

const total = countResult[0].count;
const totalPages = Math.ceil(total / limit);

const categories = await db
  .select({
    slug: category.slug,
    name: sql<string>`(SELECT ct.name FROM category_translation ct WHERE ct.category_id = ${category.id} AND ct.lang = ${locale} LIMIT 1)`,
  })
  .from(category)
  .where(and(eq(category.type, "place"), eq(category.isActive, true)));
---

<BaseLayout title={t.eventsPage.title} description={t.eventsPage.description}>
  <main class="events-page">
    <header class="page-header">
      <h1>{t.eventsPage.title}</h1>
      <p>{t.eventsPage.description}</p>
    </header>

    <section class="filters" aria-label="Filtres">
      <form method="get" action="" class="search-form" role="search">
        <input
          type="search"
          name="q"
          value={search}
          placeholder="Rechercher un événement..."
          aria-label="Rechercher un événement"
          class="search-input"
        />
        <select name="category" aria-label="Catégorie" class="filter-select">
          <option value="">Catégorie</option>
          {categories.map((cat) => (
            <option value={cat.slug} selected={cat.slug === categorySlug}>{cat.name}</option>
          ))}
        </select>
        <label class="past-toggle">
          <input type="checkbox" name="past" value="1" checked={showPast} />
          {t.eventsPage.past}
        </label>
        <button type="submit" class="search-button">{t.common.search}</button>
      </form>
    </section>

    <section class="events-grid" aria-label={t.eventsPage.title}>
      {events.length === 0 ? (
        <p class="no-results">{t.eventsPage.noEvents}</p>
      ) : (
        <ul class="event-list" role="list">
          {events.map((e) => (
            <li class="event-card">
              <a href={getRelativeLocaleUrl(locale, `/evenements/${e.slug}`)} class="event-link">
                <div class="event-card-body">
                  <div class="event-date-badge">
                    <span class="event-day">{e.startAt.getDate()}</span>
                    <span class="event-month">{e.startAt.toLocaleDateString(locale, { month: "short" })}</span>
                  </div>
                  <div class="event-info">
                    <h2 class="event-title">{e.title}</h2>
                    {e.type && <span class="event-type">{e.type}</span>}
                    {e.description && <p class="event-description">{e.description}</p>}
                    <div class="event-meta">
                      <time datetime={e.startAt.toISOString()}>
                        {e.startAt.toLocaleDateString(locale, { weekday: "long", day: "numeric", month: "long", year: "numeric" })}
                      </time>
                      <span class="event-price">
                        {e.isPaid ? `${Number(e.price ?? 0).toFixed(2)} €` : t.eventsPage.free}
                      </span>
                    </div>
                  </div>
                </div>
              </a>
            </li>
          ))}
        </ul>
      )}
    </section>

    {totalPages > 1 && (
      <nav class="pagination" aria-label="Pagination">
        {page > 1 && (
          <a href={`?q=${search}&category=${categorySlug}&past=${showPast ? "1" : "0"}&page=${page - 1}`} class="pagination-link" rel="prev">
            {t.common.previous}
          </a>
        )}
        <span class="pagination-info">Page {page} / {totalPages}</span>
        {page < totalPages && (
          <a href={`?q=${search}&category=${categorySlug}&past=${showPast ? "1" : "0"}&page=${page + 1}`} class="pagination-link" rel="next">
            {t.common.next}
          </a>
        )}
      </nav>
    )}
  </main>
</BaseLayout>

<style>
  .events-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-6, 1.5rem) var(--space-4, 1rem);
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--space-6, 1.5rem);
  }

  .page-header h1 {
    font-size: var(--text-3xl, 1.875rem);
    font-weight: 800;
    margin: 0 0 var(--space-2, 0.5rem);
  }

  .page-header p {
    color: var(--text-secondary, #64748b);
    font-size: var(--text-lg, 1.125rem);
    margin: 0;
  }

  .filters { margin-bottom: var(--space-6, 1.5rem); }

  .search-form {
    display: flex;
    gap: var(--space-2, 0.5rem);
    flex-wrap: wrap;
    align-items: center;
  }

  .search-input {
    flex: 1;
    min-width: 200px;
    padding: var(--space-2, 0.5rem) var(--space-3, 0.75rem);
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: var(--radius-md, 0.375rem);
    font-size: var(--text-sm, 0.875rem);
  }

  .filter-select {
    padding: var(--space-2, 0.5rem) var(--space-3, 0.75rem);
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: var(--radius-md, 0.375rem);
    font-size: var(--text-sm, 0.875rem);
    background: var(--bg-default, #fff);
  }

  .past-toggle {
    display: flex;
    align-items: center;
    gap: var(--space-1, 0.25rem);
    font-size: var(--text-sm, 0.875rem);
    cursor: pointer;
  }

  .search-button {
    padding: var(--space-2, 0.5rem) var(--space-4, 1rem);
    background: var(--color-primary, #3b82f6);
    color: #fff;
    border: none;
    border-radius: var(--radius-md, 0.375rem);
    cursor: pointer;
    font-weight: 600;
  }

  .event-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3, 0.75rem);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .event-card {
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: var(--radius-lg, 0.5rem);
    transition: box-shadow 0.2s;
  }

  .event-card:hover {
    box-shadow: var(--shadow-md, 0 4px 6px -1px rgba(0, 0, 0, 0.1));
  }

  .event-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .event-card-body {
    display: flex;
    gap: var(--space-4, 1rem);
    padding: var(--space-4, 1rem);
  }

  .event-date-badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-width: 60px;
    padding: var(--space-2, 0.5rem);
    background: var(--color-primary, #3b82f6);
    color: #fff;
    border-radius: var(--radius-md, 0.375rem);
  }

  .event-day {
    font-size: var(--text-2xl, 1.5rem);
    font-weight: 800;
    line-height: 1;
  }

  .event-month {
    font-size: var(--text-xs, 0.75rem);
    text-transform: uppercase;
  }

  .event-info { flex: 1; }

  .event-title {
    font-size: var(--text-lg, 1.125rem);
    font-weight: 700;
    margin: 0 0 var(--space-1, 0.25rem);
  }

  .event-type {
    display: inline-block;
    font-size: var(--text-xs, 0.75rem);
    color: var(--text-muted, #94a3b8);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-1, 0.25rem);
  }

  .event-description {
    font-size: var(--text-sm, 0.875rem);
    color: var(--text-secondary, #64748b);
    margin: 0 0 var(--space-2, 0.5rem);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .event-meta {
    display: flex;
    justify-content: space-between;
    font-size: var(--text-xs, 0.75rem);
    color: var(--text-muted, #94a3b8);
  }

  .event-price {
    font-weight: 600;
    color: var(--color-accent, #10b981);
  }

  .no-results {
    text-align: center;
    color: var(--text-secondary, #64748b);
    padding: var(--space-8, 2rem) 0;
    font-size: var(--text-lg, 1.125rem);
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-4, 1rem);
    margin-top: var(--space-8, 2rem);
  }

  .pagination-link {
    padding: var(--space-2, 0.5rem) var(--space-4, 1rem);
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: var(--radius-md, 0.375rem);
    text-decoration: none;
    color: var(--color-primary, #3b82f6);
    font-weight: 500;
  }

  .pagination-info {
    color: var(--text-secondary, #64748b);
    font-size: var(--text-sm, 0.875rem);
  }
</style>
