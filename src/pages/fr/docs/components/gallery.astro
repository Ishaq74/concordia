  <div class="demo-section">
    <GalleryComponent 
      images={masonryImages}
      mode="masonry"
      columns={3}
      showCaptions={true}
    />
  </div>

  <Code
    lang="astro"
    code={`<GalleryComponent 
  images={masonryImages}
  mode="masonry"
  columns={3}
  showCaptions={true}
/>`}
  />

  <h2 id="product">Mode Product (Checkbox Hack - CSS Pur)</h2>
