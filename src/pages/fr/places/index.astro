---
export const prerender = false;

import BaseLayout from "@layouts/BaseLayout.astro";
import { getDrizzle } from "@database/drizzle";
import { place, category } from "@database/schemas";
import { eq, and, sql, desc } from "drizzle-orm";
import translations from "@i18n/fr.json";
import { getRelativeLocaleUrl } from "@lib/i18n/locale-url";

const t = translations;
const locale = "fr";
const db = await getDrizzle();

const url = new URL(Astro.request.url);
const search = url.searchParams.get("q") ?? "";
const categorySlug = url.searchParams.get("category") ?? "";
const page = Math.max(1, parseInt(url.searchParams.get("page") ?? "1", 10));
const limit = 12;
const offset = (page - 1) * limit;

// Build query conditions
const conditions = [eq(place.status, "published")];
if (search) {
  conditions.push(
    sql`EXISTS (
      SELECT 1 FROM place_translation pt
      WHERE pt.place_id = ${place.id}
        AND pt.lang = ${locale}
        AND (pt.name ILIKE ${"%" + search + "%"} OR pt.description ILIKE ${"%" + search + "%"})
    )`,
  );
}
if (categorySlug) {
  conditions.push(
    sql`${place.categoryId} IN (SELECT id FROM category WHERE slug = ${categorySlug})`,
  );
}

const where = and(...conditions);

const [places, countResult] = await Promise.all([
  db
    .select({
      id: place.id,
      slug: place.slug,
      type: place.type,
      ratingAvg: place.ratingAvg,
      ratingCount: place.ratingCount,
      name: sql<string>`(SELECT pt.name FROM place_translation pt WHERE pt.place_id = ${place.id} AND pt.lang = ${locale} LIMIT 1)`,
      description: sql<string>`(SELECT pt.description FROM place_translation pt WHERE pt.place_id = ${place.id} AND pt.lang = ${locale} LIMIT 1)`,
    })
    .from(place)
    .where(where)
    .orderBy(desc(place.ratingAvg))
    .limit(limit)
    .offset(offset),
  db
    .select({ count: sql<number>`count(*)::int` })
    .from(place)
    .where(where),
]);

const total = countResult[0].count;
const totalPages = Math.ceil(total / limit);

// Get categories for filter
const categories = await db
  .select({
    slug: category.slug,
    name: sql<string>`(SELECT ct.name FROM category_translation ct WHERE ct.category_id = ${category.id} AND ct.lang = ${locale} LIMIT 1)`,
  })
  .from(category)
  .where(and(eq(category.type, "place"), eq(category.isActive, true)));
---

<BaseLayout title={t.places.title} description={t.places.description}>
  <main class="places-page">
    <header class="places-header">
      <h1>{t.places.title}</h1>
      <p>{t.places.description}</p>
    </header>

    <section class="places-filters" aria-label={t.places.filters}>
      <form method="get" action="" class="search-form" role="search">
        <input
          type="search"
          name="q"
          value={search}
          placeholder={t.places.search}
          aria-label={t.places.search}
          class="search-input"
        />
        <select name="category" aria-label={t.places.category} class="filter-select">
          <option value="">{t.places.category}</option>
          {categories.map((cat) => (
            <option value={cat.slug} selected={cat.slug === categorySlug}>{cat.name}</option>
          ))}
        </select>
        <button type="submit" class="search-button">{t.common.search}</button>
      </form>
    </section>

    <section class="places-grid" aria-label={t.places.title}>
      {places.length === 0 ? (
        <p class="no-results">{t.places.noResults}</p>
      ) : (
        <ul class="place-list" role="list">
          {places.map((p) => (
            <li class="place-card">
              <a href={getRelativeLocaleUrl(locale, `/places/${p.slug}`)} class="place-link">
                <div class="place-card-body">
                  <h2 class="place-name">{p.name ?? p.slug}</h2>
                  <span class="place-type">{p.type}</span>
                  {p.description && <p class="place-description">{p.description}</p>}
                  {p.ratingCount && p.ratingCount > 0 && (
                    <div class="place-rating" aria-label={`${t.places.rating}: ${p.ratingAvg}/5`}>
                      <span class="rating-stars">{"â˜…".repeat(Math.round(Number(p.ratingAvg ?? 0)))}</span>
                      <span class="rating-count">({p.ratingCount})</span>
                    </div>
                  )}
                </div>
              </a>
            </li>
          ))}
        </ul>
      )}
    </section>

    {totalPages > 1 && (
      <nav class="pagination" aria-label="Pagination">
        {page > 1 && (
          <a href={`?q=${search}&category=${categorySlug}&page=${page - 1}`} class="pagination-link" rel="prev">
            {t.common.previous}
          </a>
        )}
        <span class="pagination-info">Page {page} / {totalPages}</span>
        {page < totalPages && (
          <a href={`?q=${search}&category=${categorySlug}&page=${page + 1}`} class="pagination-link" rel="next">
            {t.common.next}
          </a>
        )}
      </nav>
    )}
  </main>
</BaseLayout>

<style>
  .places-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-6, 1.5rem) var(--space-4, 1rem);
  }

  .places-header {
    text-align: center;
    margin-bottom: var(--space-6, 1.5rem);
  }

  .places-header h1 {
    font-size: var(--text-3xl, 1.875rem);
    font-weight: 800;
    margin: 0 0 var(--space-2, 0.5rem);
  }

  .places-header p {
    color: var(--text-secondary, #64748b);
    font-size: var(--text-lg, 1.125rem);
    margin: 0;
  }

  .places-filters {
    margin-bottom: var(--space-6, 1.5rem);
  }

  .search-form {
    display: flex;
    gap: var(--space-2, 0.5rem);
    flex-wrap: wrap;
  }

  .search-input {
    flex: 1;
    min-width: 200px;
    padding: var(--space-2, 0.5rem) var(--space-3, 0.75rem);
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: var(--radius-md, 0.375rem);
    font-size: var(--text-sm, 0.875rem);
  }

  .filter-select {
    padding: var(--space-2, 0.5rem) var(--space-3, 0.75rem);
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: var(--radius-md, 0.375rem);
    font-size: var(--text-sm, 0.875rem);
    background: var(--bg-default, #fff);
  }

  .search-button {
    padding: var(--space-2, 0.5rem) var(--space-4, 1rem);
    background: var(--color-primary, #3b82f6);
    color: #fff;
    border: none;
    border-radius: var(--radius-md, 0.375rem);
    cursor: pointer;
    font-weight: 600;
  }

  .place-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-4, 1rem);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .place-card {
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: var(--radius-lg, 0.5rem);
    overflow: hidden;
    transition: box-shadow 0.2s;
  }

  .place-card:hover {
    box-shadow: var(--shadow-md, 0 4px 6px -1px rgba(0, 0, 0, 0.1));
  }

  .place-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .place-card-body {
    padding: var(--space-4, 1rem);
  }

  .place-name {
    font-size: var(--text-lg, 1.125rem);
    font-weight: 700;
    margin: 0 0 var(--space-1, 0.25rem);
  }

  .place-type {
    display: inline-block;
    font-size: var(--text-xs, 0.75rem);
    color: var(--text-muted, #94a3b8);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-2, 0.5rem);
  }

  .place-description {
    font-size: var(--text-sm, 0.875rem);
    color: var(--text-secondary, #64748b);
    margin: 0 0 var(--space-2, 0.5rem);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .place-rating {
    display: flex;
    align-items: center;
    gap: var(--space-1, 0.25rem);
    font-size: var(--text-sm, 0.875rem);
  }

  .rating-stars {
    color: var(--color-warning, #f59e0b);
  }

  .rating-count {
    color: var(--text-muted, #94a3b8);
  }

  .no-results {
    text-align: center;
    color: var(--text-secondary, #64748b);
    padding: var(--space-8, 2rem) 0;
    font-size: var(--text-lg, 1.125rem);
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-4, 1rem);
    margin-top: var(--space-8, 2rem);
    padding: var(--space-4, 1rem) 0;
  }

  .pagination-link {
    padding: var(--space-2, 0.5rem) var(--space-4, 1rem);
    border: 1px solid var(--border-color, #e2e8f0);
    border-radius: var(--radius-md, 0.375rem);
    text-decoration: none;
    color: var(--color-primary, #3b82f6);
    font-weight: 500;
  }

  .pagination-info {
    color: var(--text-secondary, #64748b);
    font-size: var(--text-sm, 0.875rem);
  }
</style>
