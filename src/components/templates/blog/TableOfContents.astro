---
export interface Props {
  variant?: 'initial' | 'retro' | 'modern' | 'futuristic';
  items: { label: string; href: string }[];
  title?: string;
  className?: string;
}

const { 
  variant = 'initial', 
  items = [],
  title = 'Table of Contents',
  className = ''
} = Astro.props;
---

<nav 
  class={`table-of-contents variant-${variant} ${className}`}
  aria-label={title}
>
  <div class="toc-header">
    <span class="toc-icon">ðŸ“–</span>
    <h2 class="toc-title">{title}</h2>
  </div>
  
  <ul class="toc-list">
    {items.map((item) => (
      <li class="toc-item">
        <a href={item.href} class="toc-link">
          {item.label}
        </a>
      </li>
    ))}
  </ul>
</nav>

<style>
  /* Reused from docs TableOfContents â€” blog variant shares same look */
  .table-of-contents { background: var(--bg-subtle); border:1px solid var(--border-default); border-radius:var(--radius-lg,0.75rem); padding:1.5rem; margin:2rem 0 }
  .toc-header { display:flex; align-items:center; gap:0.75rem; margin-bottom:1rem; padding-bottom:0.75rem; border-bottom:1px solid var(--border-default) }
  .toc-icon{font-size:1.5rem}
  .toc-title{margin:0;font-size:1.25rem;font-weight:600;color:var(--text-default)}
  .toc-list{margin:0;padding:0;list-style:none}
  .toc-link{display:block;padding:0.5rem 0.75rem;color:var(--color-primary);text-decoration:none;border-radius:var(--radius-sm,0.25rem);transition:all 0.2s ease;font-size:0.9375rem}
  .toc-link:hover{background:var(--bg-inset);transform:translateX(0.25rem)}
  @media (max-width:768px){.table-of-contents{padding:1.25rem}.toc-title{font-size:1.125rem}.toc-link{font-size:0.875rem;padding:0.375rem 0.5rem}}
</style>