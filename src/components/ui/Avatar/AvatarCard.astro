---
import Card from "@components/ui/Card/Card.astro";
import CardContent from "@components/ui/Card/CardContent.astro";
import Avatar from "./Avatar.astro";

interface Props {
  variant?: "initial" | "retro" | "modern" | "futuristic";
  src?: string;
  alt?: string;
  fallback?: string;
  name?: string;
  description?: string;
  size?: "sm" | "md" | "lg" | "xl";
  className?: string;
}

const {
  variant = "initial",
  src,
  alt,
  fallback,
  name,
  description,
  size = "lg",
  className = "",
} = Astro.props;
---

<Card variant={variant} className={className}>
  <CardContent>
    <div style="display: flex; flex-direction: column; align-items: center; gap: 1rem; text-align: center;">
      <Avatar 
        variant={variant}
        src={src}
        alt={alt}
        fallback={fallback}
        size={size}
      />
      {name && <strong style="font-size: 1.125rem;">{name}</strong>}
      {description && <p style="margin: 0; opacity: 0.7;">{description}</p>}
      <slot />
    </div>
  </CardContent>
</Card>
