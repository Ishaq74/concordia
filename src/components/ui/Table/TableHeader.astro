---
/**
 * TableHeader - En-tête de tableau
 * 
 * Wraps <thead> pour les lignes d'en-tête.
 * 
 * @param {string} className - Classes CSS additionnelles
 */

interface Props {
  className?: string;
}

const {
  className = '',
} = Astro.props;

const classes = [
  'table-header',
  className,
].filter(Boolean).join(' ');
---

<thead class={classes}>
  <slot />
</thead>
