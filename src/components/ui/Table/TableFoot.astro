---
/**
 * TableFoot - Pied du tableau
 * 
 * Wraps <tfoot> pour les lignes de résumé/total.
 * 
 * @param {string} className - Classes CSS additionnelles
 */

interface Props {
  className?: string;
}

const {
  className = '',
} = Astro.props;

const classes = [
  'table-foot',
  className,
].filter(Boolean).join(' ');
---

<tfoot class={classes}>
  <slot />
</tfoot>
