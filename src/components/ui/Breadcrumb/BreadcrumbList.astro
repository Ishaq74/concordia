---
/**
 * BreadcrumbList - Liste ordonn√©e des items breadcrumb
 */

interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<ol class={`breadcrumb-list ${className}`}>
  <slot />
</ol>

<style>
  .breadcrumb-list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--breadcrumb-gap, 0.5rem);
    list-style: none;
    padding: 0;
    margin: 0;
  }
</style>
