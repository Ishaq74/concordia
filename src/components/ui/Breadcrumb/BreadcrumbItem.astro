---
/**
 * BreadcrumbItem - Item individuel du breadcrumb
 */

interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<li class={`breadcrumb-item ${className}`}>
  <slot />
</li>

<style>
  .breadcrumb-item {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
  }
</style>
