---
/**
 * BreadcrumbLink - Lien cliquable dans le breadcrumb
 */

import Link from '../Link.astro';

interface Props {
  href: string;
  className?: string;
}

const { href, className = '' } = Astro.props;
---

<Link 
  href={href} 
  className={`breadcrumb-link ${className}`}
  style="link"
>
  <slot />
</Link>

<style>
  :global(.breadcrumb-link) {
    color: var(--breadcrumb-link-color, var(--text-muted));
    text-decoration: none;
    font-size: var(--breadcrumb-font-size, 0.875rem);
    transition: color 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
  }

  :global(.breadcrumb-link:hover) {
    color: var(--breadcrumb-link-hover-color, var(--text-default));
  }
</style>
