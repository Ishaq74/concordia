---
/**
 * BreadcrumbPage - Page courante (dernier élément)
 */

interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<span class={`breadcrumb-page ${className}`} aria-current="page">
  <slot />
</span>

<style>
  .breadcrumb-page {
    color: var(--breadcrumb-current-color, var(--text-default));
    font-size: var(--breadcrumb-font-size, 0.875rem);
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
  }
</style>
