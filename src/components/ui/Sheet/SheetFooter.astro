---
/**
 * SheetFooter - Pied de page du sheet
 * 
 * @param {string} className - Classes CSS suppl√©mentaires
 */

interface Props {
  className?: string;
  [key: string]: any;
}

const {
  className = '',
  ...htmlAttributes
} = Astro.props as Props;

const classes = [
  'sheet-footer',
  className,
].filter(Boolean).join(' ');
---

<div class={classes} {...htmlAttributes}>
  <slot />
</div>

<style>
  .sheet-footer {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    padding: var(--space-4) var(--space-6);
    border-top: 1px solid var(--border-default);
    margin-top: auto;
    background-color: var(--bg-subtle);
  }

  @media (min-width: 640px) {
    .sheet-footer {
      flex-direction: row;
      justify-content: flex-end;
      gap: var(--space-2);
    }
  }

  @media (max-width: 640px) {
    .sheet-footer {
      padding: var(--space-4) var(--space-4);
    }
  }
</style>
