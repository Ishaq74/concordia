---
import Card from "@components/ui/Card/Card.astro";
import CardHeader from "@components/ui/Card/CardHeader.astro";
import CardContent from "@components/ui/Card/CardContent.astro";
import CardMeta from "@components/ui/Card/CardMeta.astro";
import Link from "@components/ui/Link.astro";
import Badge from "@components/ui/Badge.astro";

interface Props {
  href: string;
  title: string;
  subtitle?: string;
  description?: string;
  ratingAvg?: number;
  ratingCount?: number;
  variant?: 'initial' | 'retro' | 'modern' | 'futuristic';
}

const {
  href,
  title,
  subtitle,
  description,
  ratingAvg,
  ratingCount,
  variant = 'initial'
} = Astro.props as Props;
---

<Link href={href} variant={variant}>
  <Card variant={variant} interactive>
    <CardHeader>
      <h3>{title}</h3>
      {subtitle && <Badge variant={variant} color="secondary">{subtitle}</Badge>}
    </CardHeader>
    <CardContent>
      {description && <p>{description}</p>}
    </CardContent>
    {(ratingAvg || ratingCount) && (
      <CardMeta
        items={[
          ratingAvg ? {
            icon: "mdi:star",
            text: ratingAvg.toFixed(1),
            label: "Rating"
          } : null,
          ratingCount ? {
            text: `${ratingCount} reviews`,
            label: "Reviews"
          } : null
        ].filter(Boolean)}
      />
    )}
  </Card>
</Link>