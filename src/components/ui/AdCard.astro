---
import Card from "@components/ui/Card/Card.astro";
import CardHeader from "@components/ui/Card/CardHeader.astro";
import CardContent from "@components/ui/Card/CardContent.astro";
import CardMeta from "@components/ui/Card/CardMeta.astro";
import Link from "@components/ui/Link.astro";
import Badge from "@components/ui/Badge.astro";

interface Props {
  href: string;
  title: string;
  description?: string;
  price?: number;
  condition?: string;
  location?: string;
  createdAt: Date;
  variant?: 'initial' | 'retro' | 'modern' | 'futuristic';
}

const {
  href,
  title,
  description,
  price,
  condition,
  location,
  createdAt,
  variant = 'initial'
} = Astro.props as Props;
---

<Link href={href} variant={variant}>
  <Card variant={variant} interactive>
    <CardHeader>
      <h3>{title}</h3>
    </CardHeader>
    <CardContent>
      {description && <p>{description}</p>}
    </CardContent>
    <CardMeta
      items={[
        price ? { text: `${Number(price).toFixed(2)} €`, label: "Prix" } : null,
        condition ? { text: condition, label: "État" } : null,
        location ? { text: location, label: "Lieu" } : null,
        { text: createdAt.toLocaleDateString('fr'), label: "Publié" }
      ].filter(Boolean)}
    />
  </Card>
</Link>