---
/**
 * Switch - Composant toggle switch avec support des variants
 * 
 * @param {string} id - ID pour lier le label
 * @param {string} name - Nom du champ
 * @param {boolean} checked - État activé par défaut
 * @param {boolean} required - Champ requis
 * @param {boolean} disabled - Champ désactivé
 * @param {string} variant - Style variant (initial|retro|modern|futuristic)
 * @param {string} error - Message d'erreur
 */

interface Props {
  id: string;
  name: string;
  checked?: boolean;
  required?: boolean;
  disabled?: boolean;
  variant?: 'initial' | 'retro' | 'modern' | 'futuristic';
  error?: string;
}

const {
  id,
  name,
  checked = false,
  required = false,
  disabled = false,
  variant = 'initial',
  error,
  ...rest
} = Astro.props;

const variantClass = variant !== 'initial' ? variant : '';
const hasError = !!error;
---

<div class="switch-wrapper">
  <input
    type="checkbox"
    role="switch"
    id={id}
    name={name}
    checked={checked}
    required={required}
    disabled={disabled}
    class={variantClass}
    aria-invalid={hasError}
    aria-describedby={hasError ? `${id}-error` : undefined}
    aria-checked={checked}
    {...rest}
  />
  <label for={id}>
    <slot />
  </label>
</div>
{hasError && (
  <span class="input-error-message" id={`${id}-error`} role="alert">
    {error}
  </span>
)}
